

<li class="sidenav__item">
    {% if block.settings.title != blank %}
        <a href="{{ block.settings.url }}" class="sidenav__link {% if block.settings.active %}is-active{% endif %}">
            {{ block.settings.title }}
        </a>
    {% endif %}
</li>



{% schema %}
{
	"name": "Sidenav item",
	"class": "block-sidenav-item",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "url",
			"id": "url",
			"label": "URL"
		},
		{
			"type": "checkbox",
			"id": "active",
			"label": "Active link"
		}
	],
	"presets": [
		{
			"name": "Sidenav item"
		}
	]
}
{% endschema %}
