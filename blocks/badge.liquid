<style>
  #badge-{{ block.id }} .badge {
    font-size: {{ block.settings.desktop_font_size }}px;
    font-weight: normal;
  }  

  @media screen and (max-width: 768px) {
    #badge-{{ block.id }} .badge {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
</style>

{%- if block.settings.text != blank -%}
  {%- assign alignment = block.settings.alignment | replace: 'left', 'start' | replace: 'right', 'end' -%}

  <div class="justify-items-{{ alignment }}" id="badge-{{ block.id }}" {{ block.shopify_attributes }}>
    <span
      class="badge"
      style="background-color: {{ block.settings.background }}; color: {{ block.settings.text_color }};"
    >
      {{- block.settings.text -}}
    </span>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Badge",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Text"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Badge alignment",
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "desktop_font_size",
      "label": "Desktop font size",
      "min": 14,
      "max": 32,
      "default": 18,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "label": "Mobile font size",
      "min": 14,
      "max": 32,
      "default": 18,
      "step": 1,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Badge"
    }
  ]
}
{% endschema %}
