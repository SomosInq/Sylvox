{% schema %}
{
  "name": "Best Sellers Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Customer Favorites"
    },
    {
      "type": "url",
      "id": "shop_all_url",
      "label": "Shop All Button URL"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Best Sellers Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .best-sellers-section {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    padding: 2rem 0;
  }

  .left-image-text {
    flex: 1;
  }

  .left-image-text img {
    width: 100%;
    border-radius: 8px;
  }

  .product-slider {
    flex: 2;
  }

  .flickity-viewport {
    overflow: hidden;
  }

  .flickity-slider > div {
    width: 250px;
    margin-right: 20px;
  }

  .slider-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .slider-header h2 {
    margin: 0;
  }

  .shop-all-btn {
    text-decoration: none;
    padding: 0.5rem 1rem;
    background-color: #000;
    color: #fff;
    border-radius: 4px;
  }
{% endstylesheet %}

<section class="best-sellers-section">
  <div class="left-image-text">
    {% if section.settings.left_image != blank %}
      <img src="{{ section.settings.left_image | image_url: width: 600 }}" alt="Left Image">
    {% endif %}
    <div class="slider-header">
      <div>
        <h3>{{ section.settings.subheading }}</h3>
        <h2>{{ section.settings.heading }}</h2>
      </div>
      {% if section.settings.shop_all_url %}
        <a href="{{ section.settings.shop_all_url }}" class="shop-all-btn">Shop All</a>
      {% endif %}
    </div>
  </div>

  <div class="product-slider js-flickity" data-flickity-options='{"contain": true, "wrapAround": true, "pageDots": false}'>
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
            <h4>{{ product.title }}</h4>
            <p>From {{ product.price | money }}</p>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% javascript %}
  // Ensure Flickity is loaded
  if (typeof Flickity === 'undefined') {
    var script = document.createElement('script');
    script.src = 'https://cdnjs.cloudflare.com/ajax/libs/flickity/2.3.0/flickity.pkgd.min.js';
    document.head.appendChild(script);
  }
{% endjavascript %}
