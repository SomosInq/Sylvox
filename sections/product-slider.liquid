{% comment %}
  Product Slider with working Flickity, tab switching, and Shop All top right
{% endcomment %}

{{ 'https://cdnjs.cloudflare.com/ajax/libs/flickity/2.3.0/flickity.min.css' | stylesheet_tag }}

<style>
  .product-slider-section {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    align-items: flex-start;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
    margin: {{ section.settings.margin_top }}px {{ section.settings.margin_right }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_left }}px;
    flex-direction: {% if section.settings.image_position == 'right' %}row-reverse{% else %}row{% endif %};
  }

  .product-slider-left-image { flex: 1 1 30%;z-index: 9; }
  .product-slider-right-content { flex: 1 1 65%; max-width: 65%; }

  .tabs-header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 0 2rem;
    flex-wrap: wrap;
  }

  .tab-buttons {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .tab-buttons button {
    background: none;
    border: none;
    padding: 0;
    font-size: 16px;
    cursor: pointer;
  }

  .tab-buttons button.active {
    font-weight: bold;
    text-decoration: underline;
  }

  .product-carousel {
    width: 100%;
  }

  .product-carousel .flickity-button:focus {
    box-shadow: 0 0 9px 5px #f5f5f5;
  }

  .product-slider-section .product-carousel.flickity-enabled {
    display: block !important;
    visibility: visible;
  }

  .product-slider-section .flickity-slider {
    display: flex;
  }

  .product-carousel .product-card {
    width: 33%;
    min-width: 220px;
    margin-right: 1rem;
  }

  @media screen and (min-width: 880px) {
    .product-carousel .product-card {
      min-width: 40%;
    }
  }
  @media screen and (max-width: 879px) {
    .product-slider-section .product-slider-left-image img {
      margin: auto;
    }
  }
  
  .product-slider-section .product-slider-right-content p:first-child {
    font-size: 24px;
  }
  .product-card {
    text-align: center;
  }

  .product-card img {
    max-width: 100%;
    height: auto;
  }

  .shop-all-btn {
    border: 1px solid currentColor;
    padding: 6px 20px;
    border-radius: 999px;
    font-size: 14px;
    text-decoration: none;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .product-slider-section {
      flex-direction: column;
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
    .product-slider-left-image,
    .product-slider-right-content {
      flex: 1 1 100%;
      width: 100%;
      max-width: 100%;
    }
    .tabs-header-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }

  {% if section.settings.show_arrows_desktop == false %}
    @media (min-width: 769px) {
      .product-slider-section .flickity-prev-next-button { display: none !important; }
    }
  {% endif %}
  {% if section.settings.show_arrows_mobile == false %}
    @media (max-width: 768px) {
      .product-slider-section usp-inner.flickity-prev-next-button { display: none !important; }
    }
  {% endif %}
  @media (max-width: 600px) {
     .product-slider-section .flickity-prev-next-button {
       top: 59%;
       width: 22px;
       height: 22px;
      }   
      .product-slider-section .flickity-prev-next-button.previous {
        left: -20px;
      }
      .product-slider-section .flickity-prev-next-button.next {
        right: -20px;
      }
     .product-slider-section .flickity-slider > .product-card {
          width: 33% !important;
      }
      .product-slider-right-content > p {
        font-size: 21px;
      }
  }
  #shopify-section-{{ section.id }}{
    overflow: hidden
  }
  .product-swiper-container{
    width: 100%;
    position: relative;
  }
  .product-swiper-container::before {
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    background: #fff;
    z-index: 2;
    position: absolute;
    top: 0;
    right: 100%;
    pointer-events: none;
  }
  .product-carousel-swiper.swiper{
    overflow: visible;
    z-index: 1;
  }
  .product-carousel-swiper .swiper-wrapper .product-card {
    width: 35%;
    margin-right: 24px;
  }
  @media (max-width: 768px) {
    .product-carousel-swiper .swiper-wrapper .product-card {
      width: 75%;
      margin-right: 15px;
    }
  }
</style>

<section class="product-slider-section section_width_{{ section.settings.section_width }}">
  {% if section.settings.left_image != blank %}
    <div class="product-slider-left-image">
      <img src="{{ section.settings.left_image | image_url: width: 800 }}" alt="Left Image" loading="lazy">
    </div>
  {% endif %}

  <div class="product-slider-right-content">
    {% if section.settings.subheading %}<p>{{ section.settings.subheading }}</p>{% endif %}
    {% if section.settings.heading %}<h2>{{ section.settings.heading }}</h2>{% endif %}

    <div class="tabs-header-row">
      <div class="tab-buttons">
        {% assign first = true %}
        {% for block in section.blocks %}
          <button class="tab-toggle{% if first %} active{% endif %}" data-tab="{{ block.id }}">
            {{ block.settings.tab_name }}
          </button>
          {% assign first = false %}
        {% endfor %}
      </div>
      {% if section.settings.shop_all_url %}
        <a href="{{ section.settings.shop_all_url }}" class="shop-all-btn">Shop All</a>
      {% endif %}
    </div>

    <div class="product-swiper-container">
      {% assign first = true %}
      {% for block in section.blocks %}
        {% assign block_collection = collections[block.settings.collection] %}
        <div class="product-carousel-swiper swiper"
          data-tab-content="{{ block.id }}"
          style="display: {% if first %}{% else %}none{% endif %};">
          <div class="swiper-wrapper">
            {% if block_collection != blank %}
              {% for product in block_collection.products limit: 10 %}
                <div class="product-card swiper-slide">
                  {% render 'product-card-with-size', product: product %}
                </div>
              {% endfor %}
            {% else %}
              <p>No products found in this collection.</p>
            {% endif %}
          </div>
        </div>
        {% assign first = false %}
      {% endfor %}
    </div>
  </div>
</section>

