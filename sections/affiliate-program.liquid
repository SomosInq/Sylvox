{% comment %}
  Custom section: Affiliate Program | affiliate-program.liquid
{% endcomment %}

<section class="affiliate-program">
  <div class="affiliate-program__commission">
    <p><span style="color: #636363; font-size: 48px; font-family: Questrial; font-weight: 400;">Earn </span><span style="color: #c6c6c6; font-size: 48px; font-family: Questrial; font-weight: 400;">a minimum of 5% to 8% commission on every sale you refer to Vantrue.com</span></p>
  </div>

  <div class="affiliate-program__intro-container">
    <div class="affiliate-program__intro">
      <div class="affiliate-program__intro-left">
        <h2>How it works</h2>
      </div>
      <div class="affiliate-program__intro-right">
        <div class="affiliate-program__intro-paragraphs">
          <p>We’re inviting influencers and website owners to join our Vantrue Affiliate Program!</p>
          <p>Sign up for the Vantrue Affiliate Program for free — it only takes a few minutes. Once registered, you’ll receive a unique referral link. Share this link on your website, blog, or social media to drive traffic to Vantrue.com. For every order placed through your link, you’ll earn a 5% to 8% commission on each sale. The more you share, the more you earn!</p>
        </div>
      </div>
    </div>
  </div>

  <div class="affiliate-program__steps-wrapper">
    <div class="affiliate-program__steps">
      {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="affiliate-program__step" style="background-image: url('{{ block.settings.step_background | image_url }}');" {{ block.shopify_attributes }}>
            <style>
              @media (max-width: 767px) {
                {% if block.settings.step_background_mobile %}
                .affiliate-program__step[data-block-id="{{ block.id }}"] {
                  background-image: url('{{ block.settings.step_background_mobile | image_url }}') !important;
                }
                {% endif %}
              }
            </style>
            <div class="affiliate-program__step-icon-wrapper">
              {% if block.settings.step_svg %}
                <img src="{{ block.settings.step_svg | image_url: width: 64 }}" alt="Step icon" />
              {% endif %}
            </div>
            <div class="affiliate-program__step-content">
              <small>{{ block.settings.step_number }}.</small>
              <h3>{{ block.settings.step_title }}</h3>
              <p>{{ block.settings.step_text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
.affiliate-program {
  background-color: #ffffff;
  padding-bottom: 100px;
}

.affiliate-program__commission {
  max-width: 1184px;
  margin: 0 auto;
  padding: 40px 0;
  text-align: center;
  align-items: center;
  justify-content: flex-start;
  padding-top: 40px;
  padding-bottom: 40px;
  display: flex;
  flex-direction: column;
  gap: 80px;
  font-size: 20px;
  color: #7e8182;
}

.affiliate-program__intro-container {
  max-width: 1608px;
  margin: 0 auto;
  padding: 0 20px;
}

.affiliate-program__intro {
  padding: 40px 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.affiliate-program__intro-left {
  flex: 0 0 240px;
}

.affiliate-program__intro-left h2 {
  font-size: 48px;
  font-family: Questrial, sans-serif;
  font-weight: 400;
  color: #111111;
  margin: 0;
  width: 300px;
}

.affiliate-program__intro-right {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 40px;
}

.affiliate-program__intro-paragraphs {
  max-width: 922px;
  font-size: 18px;
  font-family: Roboto, sans-serif;
  font-weight: 400;
  color: #636363;
  line-height: 1.6;
}

.affiliate-program__steps-wrapper {
  max-width: 1608px;
  margin: 64px auto 0;
  padding: 0;
  gap: 24px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.affiliate-program__steps {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
}

.affiliate-program__step {
  background-size: cover;
  background-position: top;
  background-repeat: no-repeat;
  flex: 0 0 520px;
  width: 520px;
  height: 672px;
  position: relative;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 40px;
  justify-content: flex-end;
  align-items: flex-start;
  gap: 10px;
  text-align: left;
  overflow: hidden;
}

.affiliate-program__step::before {
  content: "";
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 0;
}

.affiliate-program__step * {
  position: relative;
  z-index: 1;
}

.affiliate-program__step-icon-wrapper {
  height: 358px;
  padding: 109px 78px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
}

.affiliate-program__step-icon-wrapper img {
  width: 164px;
  height: auto;
}

.affiliate-program__step-content {
  width: 100%;
  max-width: 421px;
  display: flex;
  flex-direction: column;
  gap: 13px;
  padding: 0;
}

.affiliate-program__step-content small {
  font-size: 18px;
  font-family: Questrial, sans-serif;
  margin: 0;
  color: #ffffff;
}

.affiliate-program__step-content h3 {
  font-size: 32px;
  font-family: Questrial, sans-serif;
  font-weight: 500;
  margin: 0;
  color: #ffffff;
}

.affiliate-program__step-content p {
  font-size: 18px;
  font-family: Roboto, sans-serif;
  line-height: 1.5;
  margin: 0;
  color: #ffffff;
}

@media (max-width: 767px) {
  .affiliate-program {
    padding-bottom: 0;
  }
  .affiliate-program__commission {
    text-align: center;
    justify-content: center;
    margin: auto;
    max-width: 342px;
  }
  .affiliate-program__commission p span {
    font-size: 24px !important;
  }
  .affiliate-program__intro {
    flex-direction: column;
    align-items: center;
    padding: 0;
  }
  .affiliate-program__intro-left {
    flex: unset;
  }
  .affiliate-program__intro-left h2 {
    font-size: 20px;
    text-align: left;
    width: 342px;
    color: #000000;
    margin-bottom: 20px;
  }
  .affiliate-program__intro-paragraphs {
    width: 342px;
    font-size: 14px;
    color: #636363;
    font-family: Roboto, sans-serif;
    text-align: left;
  }
  .affiliate-program__steps-wrapper {
    padding-top: 20px;
    padding-bottom: 20px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    background: white;
    position: relative;
    margin-left: 24px;
    margin-right: 24px;
    margin-top: 0;
  }
  .affiliate-program__step {
    padding: 20px;
    background-position: center;
    background-size: cover;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    gap: 10px;
    width: 342px;
    max-width: 342px;
    max-height: 297.93px;
  }
  .affiliate-program__step-icon-wrapper {
    padding: 20px 78px;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
  }
  .affiliate-program__step-icon-wrapper img {
    width: 66px;
    height: auto;
    max-height: 53.93px;
  }
  .affiliate-program__step-content {
    gap: 13px;
    align-items: flex-start;
    text-align: left;
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
  }
  .affiliate-program__step-content small {
    font-size: 14px;
    align-self: center;
  }
  .affiliate-program__step-content h3 {
    font-size: 18px;
    align-self: center;
  }
  .affiliate-program__step-content p {
    font-size: 16px;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Affiliate Program",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "step_background",
          "label": "Background image"
        },
        {
          "type": "image_picker",
          "id": "step_background_mobile",
          "label": "Mobile background image"
        },
        {
          "type": "image_picker",
          "id": "step_svg",
          "label": "Step SVG image"
        },
        {
          "type": "text",
          "id": "step_number",
          "label": "Step number",
          "default": "1"
        },
        {
          "type": "text",
          "id": "step_title",
          "label": "Step title",
          "default": "Become an affiliate"
        },
        {
          "type": "textarea",
          "id": "step_text",
          "label": "Step description",
          "default": "Sign up and start earning commissions. It only takes a few minutes!"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Affiliate Program",
      "blocks": [
        { "type": "step" },
        { "type": "step" },
        { "type": "step" }
      ]
    }
  ]
}
{% endschema %}
