{% comment %}
  Custom section: After Service Form | after-service-form.liquid
{% endcomment %}

<div class="after-service-form-section" id="{{ section.id }}">
  <div class="after-service-form__wrapper">
    <div class="after-service-form__heading">
      <h2 class="after-service-form__title">{{ section.settings.title }}</h2>
      <p class="after-service-form__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    <form class="after-service-form__form">
      <div class="after-service-form__row after-service-form__row--2">
        <input type="text" name="name" placeholder="First and last Name*" required>
        <input type="email" name="email" placeholder="Your Email*" required>
      </div>

      <div class="after-service-form__row after-service-form__row--2">
        <input type="text" name="purchase_channel" placeholder="Purchase Channel">
        <input type="text" name="order_number" placeholder="Order Number">
      </div>

      <p class="after-service-form__label">Purchase Date</p>
      <div class="after-service-form__row after-service-form__row--3">
        <input type="text" name="month" placeholder="MM">
        <input type="text" name="day" placeholder="DD">
        <input type="text" name="year" placeholder="YYYY">
      </div>

      <p class="after-service-form__label">Product Model</p>
      <div class="after-service-form__row after-service-form__row--1">
        <div class="after-service-form__select-wrapper">
          <select name="product_model" required>
            <option value="" disabled selected hidden>Product Model</option>
            <option value="model1">Model 1</option>
            <option value="model2">Model 2</option>
          </select>
