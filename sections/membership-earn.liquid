{% comment %}
  Custom section: Membership Earn | membership-earn.liquid
{% endcomment %}

<section id="membership-ways-to-earn">
  <div class="ways-to-earn__inner">
    <h2 class="ways-to-earn__title">Ways to earn</h2>
    <div class="ways-to-earn__slider-container">
      <div class="ways-to-earn__banner">
        <div class="ways-to-earn__banner-content">
          <p>Earn points with</p>
          <h3>Every Purchase</h3>
        </div>
      </div>
      <div class="ways-to-earn__items-wrapper">
        <div class="ways-to-earn__slider">
          {% for block in section.blocks %}
            <div class="ways-to-earn__item" {{ block.shopify_attributes }}>
              <div class="ways-to-earn__icon">
                {% if block.settings.svg %}
                  <img src="{{ block.settings.svg | image_url }}" alt="">
                {% endif %}
              </div>
              <div class="ways-to-earn__label">{{ block.settings.label }}</div>
              <div class="ways-to-earn__desc">{{ block.settings.desc }}</div>
            </div>
          {% endfor %}
        </div>
        <div class="ways-to-earn__dots">
          {% for block in section.blocks %}
            <div class="ways-to-earn__dot{% if forloop.first %} active{% endif %}"></div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <style>
    #membership-ways-to-earn {
      background: #ffffff;
      padding: 100px 20px;
    }

    .ways-to-earn__inner {
      max-width: 1400px;
      margin: 0 auto;
      text-align: left;
    }

    #membership-ways-to-earn .ways-to-earn__title {
      font-family: 'Questrial', sans-serif;
      font-size: 48px;
      font-weight: 400;
      color: #111;
      margin-bottom: 54px;
    }

    .ways-to-earn__banner {
      background: url('{{ section.settings.banner | image_url }}') no-repeat center;
      background-size: cover;
      width: 100%;
      height: auto;
      border-radius: 12px;
      margin-bottom: 60px;
      padding: 140px 60px;
      display: flex;
      align-items: flex-start;
    }

    .ways-to-earn__banner-content p {
      font-family: 'Questrial', sans-serif;
      font-size: 20px;
      margin: 0 0 12px;
    }

    .ways-to-earn__banner-content h3 {
      font-family: 'Questrial', sans-serif;
      font-size: 40px;
      font-weight: 400;
      margin: 0;
    }

    .ways-to-earn__items-wrapper {
      position: relative;
      overflow: hidden;
    }

    .ways-to-earn__slider {
      display: flex;
      transition: transform 0.3s ease;
      gap: 24px;
    }

    .ways-to-earn__item {
      flex: 0 0 300px;
      text-align: center;
      padding: 24px;
      border-top: 1px solid #d4d4d4;
      border-left: 1px solid #d4d4d4;
      border-right: 1px solid #d4d4d4;
    }

    .ways-to-earn__icon {
      display: flex;
      justify-content: center;
    }

    .ways-to-earn__icon img {
      width: 40px;
      height: 40px;
      margin-bottom: 16px;
    }

    .ways-to-earn__label {
      font-family: 'Questrial', sans-serif;
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 8px;
    }

    .ways-to-earn__desc {
      font-size: 14px;
      color: #333;
      font-family: 'Questrial', sans-serif;
    }

    .ways-to-earn__dots {
      display: flex;
      justify-content: center;
      margin-top: 32px;
      gap: 12px;
    }

    .ways-to-earn__dot {
      width: 12px;
      height: 12px;
      border-radius: 999px;
      background-color: #cccccc;
      transition: all 0.3s ease;
    }

    .ways-to-earn__dot.active {
      width: 36px;
      background-color: #111;
    }
  </style>
</section>

{% schema %}
{
  "name": "Membership Earn",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner",
      "label": "Banner Background Image"
    }
  ],
  "blocks": [
    {
      "type": "ways_slider",
      "name": "Ways to Earn",
      "settings": [
        {
          "type": "image_picker",
          "id": "svg",
          "label": "SVG Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Subscribe Newsletter"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "Subscribe Newsletter and get 10 points"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Earn",
      "category": "Custom"
    }
  ]
}
{% endschema %}
