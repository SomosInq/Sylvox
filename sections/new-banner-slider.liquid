{% comment %} New Banner Slider - rewritten using scroll-based carousel (no Flickity) {% endcomment %}

{{ 'https://cdnjs.cloudflare.com/ajax/libs/flickity/2.3.0/flickity.pkgd.min.js' | script_tag }}

<section id="new-banner-slider-{{ section.id }}"
  class="new-banner-slider section_width_{{ section.settings.section_width }}"
  style="
  background-color: {{ section.settings.background_color }};
    margin: {{ section.settings.margin_top }}px {{ section.settings.margin_right }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_left }}px; padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  "
>
  <div class="slider-text section_content_width_{{ section.settings.section_content_width }} {{ section.settings.text_alignment }}">
    <div class="slider-heading-small">{{ section.settings.heading }}</div>
    <h2 class="slider-heading-main">{{ section.settings.subheading }}</h2>
    <div class="slider-description">{{ section.settings.description }}</div>
  </div>

  <div class="slider-carousel">
    <div class="slider-track">
      {% for block in section.blocks %}
        <div class="slider-slide size-{{ section.settings.slide_size }}" style="scroll-snap-align: center; flex: 0 0 auto; height: {{ section.settings.slide_height }}px; width: {{ section.settings.slide_width }}px; position: relative;">
          {% if block.settings.image %}
            <img class="desktop-image {% if block.settings.mobile_image %} has-mobile-image {% endif %}" src="{{ block.settings.image | img_url: '1600x' }}" alt="Slide Image" style="width: 100%; height: 100%; object-fit: cover;">
          {% endif %}
          {% if block.settings.mobile_image %}
            <img class="mobile-image" src="{{ block.settings.mobile_image | img_url: '800x' }}" alt="Slide Image" style="width: 100%; height: 100%; object-fit: cover;">
          {% endif %}
          <div class="slider-content">
            {% if block.settings.caption %}<h2>{{ block.settings.caption }}</h2>{% endif %}
            {% if block.settings.caption_small %}<h4>{{ block.settings.caption_small }}</h4>{% endif %}
            {% if block.settings.description_block %}<p>{{ block.settings.description_block }}</p>{% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="slider-controls section_content_width_{{ section.settings.section_content_width }}" style="display: flex; justify-content: space-between; align-items: center; margin-top: 3rem !important;">
      {% if section.settings.show_dots %}
      <div class="slider-dots">
        {% for block in section.blocks %}
          <span class="slider-dot{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}"></span>
        {% endfor %}
      </div>
      {% endif %}
      {% if section.settings.show_arrows %}
        <div class="slider-arrows">
          <button class="slider-arrow prev"><span>‹</span></button>
          <button class="slider-arrow next"><span>›</span></button>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #new-banner-slider-{{ section.id }} { overflow: hidden; }
  .slider-text.left { text-align: left; }
  .slider-text.center { text-align: center; }
  .slider-text.right { text-align: right; }

  .slider-heading-small { font-size: 0.875rem; color: #888; margin-bottom: 0.25rem; }
  .slider-heading-main { font-size: 28px; font-weight: 400; display: inline-block; padding-bottom: 4px; max-width: 880px;}
  .slider-description { color: #555; margin-bottom: 1.5rem; }

  .slider-slide { opacity: 0.4; transition: opacity 0.3s ease; margin-right: 20px;}
  .slider-slide.active { opacity: 1; }

  .slider-controls { margin-top: 30px !important; }

  .slider-content {
    position: absolute;
    bottom: 40px;
    left: 2rem;
    color: white;
  }

  #new-banner-slider-{{ section.id }} .flickity-slider {
    display: flex;
    align-items: center; /* vertical center */
  }

  .slider-dots {
    display: flex;
    gap: 8px;
  }

  .slider-track {
    display: flex;
    opacity: 0;
    transition: 200ms;
  }

  .slider-track.flickity-enabled {
    opacity: 1;
    display: block;
  }

  .slider-arrow span {
    margin-top: -4px;
    display: block;
  }
  .slider-arrow.next span {
    padding-left: 3px;
  }

  #new-banner-slider-{{ section.id }} .slider-controls {
    max-width: 800px;
  }
  #new-banner-slider-{{ section.id }} .mobile-image {
    display: none;
  }
  #new-banner-slider-{{ section.id }} {
    padding-inline: 40px;
  }

  #new-banner-slider-{{ section.id }} .slider-track::-webkit-scrollbar {
    display: none; 
  }

  #new-banner-slider-{{ section.id }} .slider-track {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
  }

  #new-banner-slider-{{ section.id }} .slider-content h4 {
    font-size: 20px;
    margin-bottom: 8px;
  }
  #new-banner-slider-{{ section.id }} .slider-content p {
    font-size: 16px;
  }

  .slider-dot {
    width: 24px;
    height: 25px;
    background: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='24' height='25'><rect x='4' y='11.95' width='16' height='2' rx='1' fill='%23636363'/></svg>") no-repeat center center;
    background-size: contain;
    cursor: pointer;
  }

  .slider-dot.active {
    background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='24' height='25'><rect x='4' y='11.95' width='16' height='2' rx='1' fill='%23DB4B97'/></svg>");
  }

  .slider-arrows {
    display: flex;
    gap: 10px;
  }
  .slider-arrows button {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid #000;
    background: white;
    cursor: pointer;
    font-size: 1.5rem;
  }
  @media only screen and (max-width: 1024px) {
    #new-banner-slider-{{ section.id }} .slider-heading-main {
      font-size: 21px;
    }
    #new-banner-slider-{{ section.id }} .slider-content h4 {
      font-size: 18px;
      margin-bottom: 8px;
    }
    #new-banner-slider-{{ section.id }} .slider-content p {
      font-size: 14px;
    }
    #new-banner-slider-{{ section.id }} .slider-slide {
      height: auto!important;
      width: 80% !important;
    }
    #new-banner-slider-{{ section.id }} .slider-content {
      width: calc(100% - 4rem);
    }
  }
  @media only screen and (max-width: 768px) {
    #new-banner-slider-{{ section.id }} .desktop-image.has-mobile-image {
      display: none;
    } 
    #new-banner-slider-{{ section.id }} .mobile-image {
      display: block;
    }
    #new-banner-slider-{{ section.id }} {
      padding-inline: 15px;
    }
    #new-banner-slider-{{ section.id }} .section_content_width_standard {
      padding-left: 0 !important;
    }
    #new-banner-slider-{{ section.id }} .slider-heading-main {
      font-size: 18px;
    }
    .slider-carousel .slider-slide {
      height: auto!important;
      width: 80% !important;
    }
    .slider-carousel .slider-slide > img {
      object-fit: contain!important;
    }
  }
  
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const section = document.getElementById('new-banner-slider-{{ section.id }}');
  const track = section.querySelector('.slider-track'); 
  const slides = section.querySelectorAll('.slider-slide');
  const dots = section.querySelectorAll('.slider-dot');
  const prevArrow = section.querySelector('.slider-arrow.prev');
  const nextArrow = section.querySelector('.slider-arrow.next');

  // Initialize Flickity
  const flkty = new Flickity(track, {
    wrapAround: true,
    imagesLoaded: true,
    pageDots: false,
    prevNextButtons: false,
    cellAlign: 'center',
    contain: true,
    groupCells: 1.1
  });

  // Arrow buttons
  if (prevArrow) prevArrow.addEventListener('click', () => flkty.previous());
  if (nextArrow) nextArrow.addEventListener('click', () => flkty.next());

  // Dot click => change slide
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => flkty.select(index));
  });

  // Flickity change => update active classes
  flkty.on('change', (index) => {
    slides.forEach((slide, i) => slide.classList.toggle('active', i === index));
    dots.forEach((dot, i) => dot.classList.toggle('active', i === index));
  });

  // Initial active state
  if (slides[0]) slides[0].classList.add('active');
  if (dots[0]) dots[0].classList.add('active');
});
</script>





