{% schema %}
{
  "name": "New Banner Slider",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {
      "type": "select",
      "id": "section_content_width",
      "label": "Content Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {"type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "padding_left", "label": "Padding left", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "padding_right", "label": "Padding right", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "margin_top", "label": "Margin top", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "margin_bottom", "label": "Margin bottom", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "margin_left", "label": "Margin left", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {"type": "range", "id": "margin_right", "label": "Margin right", "min": 0, "max": 100, "step": 5, "default": 0, "unit": "px"},
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Small Heading",
      "default": "Your Outdoor Oasis, Upgraded."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Main Heading",
      "default": "The Sylvox Deck Pro 2.0 isn’t just a TV—it’s a gateway to better outdoor moments."
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show Arrows",
      "default": true
    },
    {
      "type": "select",
      "id": "slide_size",
      "label": "Slide Image Size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "large"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Title",
          "default": "Outdoor Dining Area"
        },
        {
          "type": "textarea",
          "id": "description_block",
          "label": "Description",
          "default": "Outdoor Dining Area"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Banner Slider",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

{% style %}
<style>
  .outdoor-carousel-section {
    padding: 2rem 1rem;
  }

  .controls {
    position: relative;
  }

  .outdoor-carousel-text.left { text-align: left; }
  .outdoor-carousel-text.center { text-align: center; }
  .outdoor-carousel-text.right { text-align: right; }

  .small-heading {
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 0.25rem;
  }

  .main-heading {
    font-size: 1.625rem;
    font-weight: 500;
  }

  .carousel-dots .flickity-page-dots {
    position: static !important;
    bottom: auto !important;
    left: auto !important;
    display: flex !important;
    justify-content: flex-start;
    gap: 8px;
    margin-top: 0;
  }

  .flickity-page-dots .dot {
    all: unset;
    display: block;
    width: 24px;
    height: 25px;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none"><rect x="4" y="11.9502" width="16" height="2" rx="1" fill="%23636363"/></svg>') no-repeat center center;
    background-size: contain;
    cursor: pointer;
    float: left;
  }

  .flickity-page-dots .dot.is-selected {
    width: 24px;
    height: 25px;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none"><rect x="4" y="11.9502" width="16" height="2" rx="1" fill="%23DB4B97"/></svg>');
    opacity: 1;
    background-color: transparent;
  }

  .carousel-wrapper {
    position: relative;
    max-width: 100%;
  }

  .carousel-arrows-wrapper {
    display: flex;
    justify-content: flex-end;
  }

  .flickity-carousel {
    overflow: visible;
  }

  .carousel-cell {
    margin-right: 20px;
    opacity: 0.3;
    transform: scale(0.94);
    transition: all 0.3s ease;
  }

  .carousel-cell.is-selected {
    opacity: 1;
    transform: scale(1);
  }

  .carousel-cell img {
    width: 100%;
    border-radius: 8px;
  }

  .carousel-cell.size-small { width: 40%; }
  .carousel-cell.size-medium { width: 55%; }
  .carousel-cell.size-large { width: 70%; }

  .carousel-caption {
    position: absolute;
    bottom: 2rem;
    left: 1rem;
    font-size: 0.75rem;
    color: white;
    font-weight: 400;
  }

   .carousel-description_block {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    font-size: 0.75rem;
    color: white;
    font-weight: 400;
  }

  .carousel-arrows {
    display: flex;
    gap: 10px;
    position: absolute;
    bottom: -55px;
    right: 0;
  }

  .carousel-arrows button {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    cursor: pointer;
    transition: border-color 0.3s;
  }

  .carousel-arrows button:hover {
    border-color: #999;
  }

  .carousel-arrows button svg {
    width: 16px;
    height: 16px;
    fill: #333;
  }
</style>
{% endstyle %}


<section class="outdoor-carousel-section section_width_{{ section.settings.section_width }}" style="padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px; margin: {{ section.settings.margin_top }}px {{ section.settings.margin_right }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_left }}px">
  <div class="outdoor-carousel-text section_content_width_{{ section.settings.section_content_width }} {{ section.settings.text_alignment }}">
    <div class="small-heading">{{ section.settings.heading }}</div>
    <h2>{{ section.settings.subheading }}</h2>
  </div>

  <div class="carousel-wrapper section_width_{{ section.settings.section_width }}">
    <div class="flickity-carousel"
         data-flickity='{
           "wrapAround": true,
           "imagesLoaded": true,
           "pageDots": true,
           "prevNextButtons": false,
           "cellAlign": "center",
           "contain": true
         }'>
      {% for block in section.blocks %}
        <div class="carousel-cell size-{{ section.settings.slide_size }} relative">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="Slide Image">
          {% endif %}
          {% if block.settings.caption %}
            <div class="carousel-caption">{{ block.settings.caption }}</div>
          {% endif %}
          {% if block.settings.description_block %}
            <div class="carousel-description_block">{{ block.settings.description_block }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Dots and Arrows Container -->
  <div class="controls dots-arrows-wrapper section_content_width_{{ section.settings.section_content_width }}" style="display: flex; justify-content: space-between; align-items: center; margin-top: 16px;">
    <div class="carousel-dots-container">
      <div class="carousel-dots"></div>
    </div>

    {% if section.settings.show_arrows %}
      <div class="carousel-arrows content-right">
        <button class="usp-arrow prev" aria-label="Previous">‹</button>
        <button class="usp-arrow next" aria-label="Next">›</button>
      </div>
    {% endif %}
  </div>
</section>

{% javascript %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carousel = document.querySelector('.flickity-carousel');
    const customDotsContainer = document.querySelector('.carousel-dots');

    // Fully disable Flickity's default dot handling
    let flkty = new Flickity(carousel, {
      wrapAround: true,
      imagesLoaded: true,
      pageDots: false, // prevent auto-adding to DOM
      prevNextButtons: false,
      cellAlign: "center",
      contain: true
    });

    // Manually generate page dots and move them inside .carousel-dots
    flkty.on('ready', function () {
      if (typeof flkty.createPageDots === 'function') {
        flkty.createPageDots(); // create <ol class="flickity-page-dots">
      }
      if (flkty.pageDots && flkty.pageDots.element && customDotsContainer) {
        customDotsContainer.appendChild(flkty.pageDots.element);
      }
    });

    // Navigation arrows
    document.querySelector('.carousel-prev')?.addEventListener('click', () => flkty.previous());
    document.querySelector('.carousel-next')?.addEventListener('click', () => flkty.next());
  });
</script>
{% endjavascript %}


