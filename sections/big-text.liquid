<style>
.big-text-section{
    text-align: center;
    font-family: BasicSans;
    font-size: 35px;
    font-weight: 400;
}

.big-text-section h2{
    font-size: clamp(42px, 10vw, 180px); 
    font-family: BasicSans;
    font-weight: 700;
    line-height: 0.8;
    text-wrap: balance;
    margin-bottom: calc(10px + 0.3vw);
}

.big-text-section .big-text__main-title {
    background-image: linear-gradient(180deg, rgba(26, 26, 26, 0.2), rgba(26, 26, 26, 0) 100%);;
    color: #0000;
    box-decoration-break: clone;
    -webkit-background-clip: text;
    background-clip: text;
}

.big-text__subtitle {
  font-size: clamp(14px, 2vw, 31px); 
  text-wrap: balance;
  margin-bottom: calc(7px + 0.3vw);
  color: var(--color-grey-1);
}

.big-text__buttons {
  margin-top: 25px;
  text-transform: uppercase;
  display: flex;
  justify-content: center;
  column-gap: 27px;
  flex-wrap: wrap;
  row-gap: 10px;
}

.big-text__description > h5{
    color: rgba(0, 0, 0, 0.65);
    font-size: 24px;
    line-height: normal;
    margin-bottom: 30px;
    font-weight: 400;
}

.big-text img {
  margin-top: 1vw;
  width: 45%;
  display: inline-block;
  max-width: 390px;
}


#shopify-section-{{ section.id }} .icon img {
  height: 33px;
}

.big-text__description > p {
  color: rgba(0, 0, 0, 0.65);
  font-size: clamp(14px, 2vw, 34px); 
  text-wrap: balance;
  line-height: var(--line-height-compact);
  color: #000;
}

.big-text__icons {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 40px;
  text-align: center;
  margin: 60px 0;
}

.big-text__icons .icon{
    padding: 0;
    font-size: 16px;
    flex: 1
}

.big-text__icons img {
  display: inline-block;
  margin-bottom: 10px;
}

.big-text__icons p {
  line-height: var(--line-height-compact);
}






@media screen and (max-width: 749px){

    .big-text {
      display: flex;
      flex-direction: column;
      align-items: center;
    }


    .big-text-section .big-text__main-title {
        margin-bottom: 10px;
    } 

    .big-text img {
      width: 45%;
      min-width: 230px;
    }

    .big-text__buttons {
      order: 1;
      margin-top: 10px;
    }

    .big-text__buttons .video-link {
      border: none;
      box-shadow: none;
      padding-left: 0;
      padding-right: 0;
      text-transform: capitalize;
      font-weight: 500;
    }

    .big-text__buttons .video-link:after {
      content: ' >';
    }

    .big-text-section .big-text__subtitle {
        line-height: var(--line-height-compact);
    } 

    .big-text-section {
        font-size: 20px;
    }

    .big-text__description h5 {
        font-size: 16px;
        margin-bottom: 20px;
    }


    .big-text__icons {
        row-gap: 10px;
        column-gap: 13px;
        margin: 30px 0;
    }

    .big-text__icons .icon {
        padding: 0;
        font-size: 12px;
        flex: 0 0 100px;
    }

    .big-text__icons .icon p {
        margin-bottom: 10px;
    }
}




@media screen and (max-width: 400px){

    .big-text__icons {
        column-gap: 5px;
    }

}





</style>

<div class="big-text-section section-{{ section.id }}-padding" {% if section.settings.custom_id != blank %}id="{{ section.settings.custom_id }}"{% endif %}>
  <div class="section">
    <div class="big-text">
      <h2 class="big-text__main-title">{{ section.settings.title }}</h2>
      <p class="big-text__subtitle">{{ section.settings.intro }}</p>
      <div class="big-text__description">{{ section.settings.paragraph }}</div>
      {% if section.settings.video_link != blank or section.settings.shop_link != blank %}
        <div class="big-text__buttons">
          {% if section.settings.shop_link != blank %}
            <a class="button button--outline button--lg" href="{{ section.settings.shop_link }}">Shop Now</a>
          {% endif %}

          {% if section.settings.video_link != blank %}
            <a class="button button--outline button--lg video-link" href="{{ section.settings.video_link }}">Watch Full Video</a>
          {% endif %}
        </div>
      {% endif %}
      <img src="{{ section.settings.image |  image_url: width: '1080px'  }}" alt="{{section.settings.image.alt}}">
    </div>
    <div class="big-text__icons">
      {% for block in section.blocks %}
        <div class="icon">
          <img src="{{ block.settings.icon | img_url: '32x32' }}" alt="{{ block.settings.text }}">
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "Big Text Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "NanoAI"
    },
    {
      "type": "text",
      "id": "intro",
      "label": "Intro",
      "default": "Smarter. Faster. More Connected."
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Description",
      "default": "<p>Your AI-Powered Co-Pilot â€“ Keep your hands on the wheel while Nano AI handles music, navigation, and real-time updates with intuitive voice control.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "shop_link",
      "label": "Shop link"
    },
    {
      "type": "url",
      "id": "video_link",
      "label": "Video link"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom ID",
      "info": "Used for internal linking."
    }
  ],
  "blocks": [
    {
        "type": "icon",
        "name": "Icon with text",
        "settings": [
            {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon",
            "info": "Image size should be 32x32px"
            },
            {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Voice control"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Big Text"
    }
  ]
}
{% endschema %}
