  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Tab label",
          "default": "Data Protection"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Double Protection for Recording Data"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "With the LTE Module, Vantrue Cloud Dashcam includes 2GB of free cloud storage alongside SD card storage."
        },
        {
          "type": "image_picker",
          "id": "background",
          "label": "Background image"
        },
        {
          "type": "image_picker",
          "id": "mobile_background",
          "label": "Mobile background image"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#1D1D1B"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Banner Tabs",
      "category": "Custom"
    }
  ]
}
{% endschema %}
