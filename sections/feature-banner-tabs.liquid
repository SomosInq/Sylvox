  }

  .feature-banner-tabs__underline {
    width: 100%;
    max-width: 342px;
    height: 1px;
    background-color: #959393;
    display: none;
  }

  .feature-banner-tabs__carousel:not(.flickity-enabled) .feature-banner-tabs__carousel {
    padding-left: 24px;
    padding-right: 24px;
    flex-direction: row;
    justify-content: flex-start;
