    overflow: hidden;
    width: 90%;
    margin: auto!important;
  }

  .feature-banner-tabs__tabs-wrapper {
    padding-left: 10px;
    padding-right: 10px;
    justify-content: center;
    align-items: center;
    gap: 12px;
    display: flex;
    flex-wrap: wrap;
    align-content: center;
  }

  .feature-banner-tabs__tabs { 
    display: none;
  }

  .tab-label {
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #959393;
    text-align: center;
    justify-content: center;
    display: flex;
