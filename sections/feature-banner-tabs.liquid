  }
}
{% endstyle %}
<script>
document.addEventListener("DOMContentLoaded", () => {
  const section = document.getElementById("feature-banner-tabs-{{ section.id }}");
  if (!section) return;

  const carousel = section.querySelector(".feature-banner-tabs__carousel");
  const slides = section.querySelectorAll(".feature-banner-tabs__slide");
  const tabs = section.querySelectorAll(".tab-label");
  const dots = section.querySelectorAll(".dot");
  const autoplayEnabled = {{ section.settings.autoplay_enabled | json }};
  const interval = {{ section.settings.autoplay_interval }} * 1000;

  if (!carousel || slides.length === 0) return;

  // Initialize Flickity
  const flkty = new Flickity(carousel, {
    wrapAround: true,
    cellAlign: "center",
    contain: true,
    pageDots: false,
    prevNextButtons: false,
    autoPlay: autoplayEnabled ? interval : false,
    imagesLoaded: true,
    draggable: true,
  });

  let autoplayTimer = null;

  // Function to update active states for tabs, dots, and slides
  function updateUI(selectedIndex) {
    tabs.forEach((tab, i) => tab.classList.toggle("active", i === selectedIndex));
    dots.forEach((dot, i) => dot.classList.toggle("active", i === selectedIndex));
    slides.forEach((slide, i) => slide.classList.toggle("active", i === selectedIndex));
  }

  // Reset Flickity autoplay timer
  function resetAutoplay() {
    if (!autoplayEnabled) return;
    flkty.stopPlayer();
    flkty.playPlayer(interval);
  }

  // Sync Flickity change with UI
  flkty.on("change", (index) => {
    const realIndex = index % tabs.length; // wrapAround clones
    updateUI(realIndex);
    resetAutoplay();
  });

  // User interaction: click tabs
  tabs.forEach((tab, i) => {
    tab.addEventListener("click", () => {
      flkty.select(i);
      resetAutoplay();
    });
  });

  // User interaction: click dots
  dots.forEach((dot, i) => {
    dot.addEventListener("click", () => {
      flkty.select(i);
      resetAutoplay();
    });
  });

  // User interaction: dragging slides
  flkty.on("dragEnd", () => {
    resetAutoplay();
  });

  // Initialize UI
  updateUI(flkty.selectedIndex % tabs.length);
});
</script>


