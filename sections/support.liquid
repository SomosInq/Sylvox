<style>
  .support-section {
    background-color: #20413B;
    color: white;
    padding: 40px;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .support-title {
    font-size: 24px;
    font-weight: bold;
  }
  .support-links {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .support-link a {
    color: white;
    text-decoration: none;
    border: 1px solid white;
    padding: 10px 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 250px;
  }
</style>

<div class="support-section">
  <div class="support-title">
    Sylvox Support
  </div>
  <div class="support-links">
    {% for block in section.blocks %}
      <div class="support-link">
        <a href="{{ block.settings.url }}">
          {{ block.settings.text }}
          <span>â†’</span>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Large product",
  "settings": [],
  "blocks": [
    {
      "type": "link_item",
      "name": "Link Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Large product",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}
