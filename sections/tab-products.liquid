{% comment %}
  Enhanced Tab Products Section
  - Includes full width and background customization
  - Position controls for text and overlays
  - Filter dropdown
  - Adjustable image sizing and padding/margin options
{% endcomment %}

<style>
  .section-full {
    width: 100vw;
    margin-left: calc(-1 * var(--container-padding));
    margin-right: calc(-1 * var(--container-padding));
  }
  .section-contained {
    max-width: var(--container-inner-width);
    margin: 0 auto;
  }
  .banner-overlay-image {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 80px;
    height: auto;
    z-index: 10;
  }
  .filter-options {
    margin-top: 10px;
  }
</style>

<div class="tab-products section {% if section.settings.full_width %}section-full{% else %}section-contained{% endif %}"
     style="
       background-color: {{ section.settings.section_background_color }};
       {% if section.settings.section_background_image %}
         background-image: url({{ section.settings.section_background_image | image_url }});
         background-size: cover;
         background-position: center;
       {% endif %}
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       padding-left: {{ section.settings.padding_left }}px;
       padding-right: {{ section.settings.padding_right }}px;
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
     ">

  <div class="tabs" style="--tab-position: {{ section.settings.tabs_position }}%;">
    {% for block in section.blocks %}
      <div class="tab-product" data-tab-id="{{ forloop.index0 }}" data-section-id="{{ section.id }}">
        {{ block.settings.tab_label }}
      </div>
    {% endfor %}
  </div>

  {% for block in section.blocks %}
    <div class="tab-product-content" id="tab-product-content-{{ section.id }}-{{ forloop.index0 }}">
      <div class="tab-product-content__banner" style="position: relative;">
        {% if block.settings.overlay_image %}
          <div class="banner-overlay-image">
            <img src="{{ block.settings.overlay_image | image_url }}" alt="Overlay">
          </div>
        {% endif %}

        <img
          src="{{ block.settings.image | image_url }}"
          alt="{{ block.settings.title }}"
          style="width: {{ block.settings.image_width_percent }}%; height: auto;"
        >

        <div class="tab-product-content__info {{ section.settings.mobile_text_position }} {{ section.settings.desktop_text_position }}"
          style="
            color: {{ block.settings.text_color }};
            max-width: {{ block.settings.content_max_width }}px;
          ">

          <div class="tab-product-content__info-title">
            <h3 style="font-size: {{ block.settings.title_font_size }}px;">
              {{ block.settings.title }}
            </h3>
            {% if block.settings.inline_title != blank %}
              <span>{{ block.settings.inline_title }}</span>
            {% endif %}

            <div class="filter-options">
              <label>Filters:</label>
              <select>
                <option>All</option>
                <option>Full Sun</option>
                <option>Partial Sun</option>
              </select>
            </div>
          </div>

          <div class="tab-product-content__info-dec">
            {{ block.settings.description }}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Tab Products Enhanced",
  "settings": [
    { "type": "checkbox", "id": "full_width", "label": "Full width", "default": true },
    { "type": "image_picker", "id": "section_background_image", "label": "Background Image" },
    { "type": "color", "id": "section_background_color", "label": "Background Color", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "label": "Top Padding", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    { "type": "range", "id": "padding_bottom", "label": "Bottom Padding", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    { "type": "range", "id": "padding_left", "label": "Left Padding", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    { "type": "range", "id": "padding_right", "label": "Right Padding", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    { "type": "range", "id": "margin_top", "label": "Top Margin", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    { "type": "range", "id": "margin_bottom", "label": "Bottom Margin", "min": 0, "max": 100, "step": 5, "unit": "px", "default": 0 },
    {
      "type": "select",
      "id": "mobile_text_position",
      "label": "Mobile content position",
      "options": [
        { "value": "place-self-start text-start", "label": "Top left" },
        { "value": "place-self-center text-center", "label": "Middle center" },
        { "value": "place-self-end text-end", "label": "Bottom right" }
      ],
      "default": "place-self-center text-center"
    },
    {
      "type": "select",
      "id": "desktop_text_position",
      "label": "Desktop content position",
      "options": [
        { "value": "sm:place-self-start sm:text-start", "label": "Top left" },
        { "value": "sm:place-self-center sm:text-center", "label": "Middle center" },
        { "value": "sm:place-self-end sm:text-end", "label": "Bottom right" }
      ],
      "default": "sm:place-self-center sm:text-center"
    },
    { "type": "range", "id": "tabs_position", "min": 0, "max": 100, "step": 1, "unit": "%", "label": "Tab vertical position", "default": 30 }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        { "type": "text", "id": "tab_label", "label": "Tab Label" },
        { "type": "text", "id": "title", "label": "Heading" },
        { "type": "text", "id": "inline_title", "label": "Inline Title" },
        { "type": "richtext", "id": "description", "label": "Description" },
        { "type": "image_picker", "id": "image", "label": "Main Image" },
        { "type": "image_picker", "id": "overlay_image", "label": "Overlay Image (Top Right)" },
        { "type": "color", "id": "text_color", "label": "Text Color", "default": "#000000" },
        { "type": "range", "id": "title_font_size", "label": "Title Font Size", "min": 12, "max": 72, "step": 2, "default": 32 },
        { "type": "range", "id": "content_max_width", "label": "Content Max Width", "min": 400, "max": 1200, "step": 20, "default": 780 },
        { "type": "range", "id": "image_width_percent", "label": "Image Width (%)", "min": 10, "max": 100, "step": 5, "default": 100 }
      ]
    }
  ],
  "presets": [
    { "name": "Tab Products Enhanced", "category": "Custom" }
  ]
}
{% endschema %}
