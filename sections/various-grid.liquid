        },
        {
          "type": "color",
          "id": "body_color",
          "label": "Body Color",
          "default": "#333333"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Various Grid",
      "category": "Somos Custom"
    }
  ]
}
