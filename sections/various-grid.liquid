    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "No matter how you watch, listen, or play, your TV should keep up."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size (px)",
      "min": 10,
      "max": 24,
      "default": 16
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {
      "type": "select",
      "id": "section_content_width",
      "label": "Content Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "feature_box",
      "name": "USP Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "range",
          "id": "icon_size",
          "label": "Icon Width (%)",
          "min": 10,
          "max": 100,
          "default": 50
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Wireless Freedom"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Title Font Size (px)",
          "min": 12,
          "max": 36,
          "default": 18
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Body",
          "default": "Ditch the cables and enjoy true wireless convenience."
        },
        {
          "type": "color",
          "id": "body_color",
          "label": "Body Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "body_size",
          "label": "Body Font Size (px)",
          "min": 10,
          "max": 24,
          "default": 14
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Various Grid",
      "category": "Somos Custom"
    }
  ]
