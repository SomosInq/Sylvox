      "label": "Margin Right",
      "default": "0"
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "default": "0"
    },
    {
      "type": "text",
      "id": "margin_left",
      "label": "Margin Left",
      "default": "0"
    },
    {
      "type": "text",
      "id": "padding_top",
      "label": "Padding Top",
      "default": "0"
    },
    {
      "type": "text",
      "id": "padding_right",
      "label": "Padding Right",
      "default": "0"
    },
    {
      "type": "text",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": "0"
    },
    {
      "type": "text",
      "id": "padding_left",
