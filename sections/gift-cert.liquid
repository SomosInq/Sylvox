    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Sign In"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
