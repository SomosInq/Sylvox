<section 
  id="{{ section.settings.section_id }}" 
  class="section_width_{{ section.settings.section_width }} section_content_width_{{ section.settings.section_content_width }} {{ section.settings.custom_class }}"
  style="
    background-color: {{ section.settings.background_color }};
    {% if section.settings.background_image %}background-image: url('{{ section.settings.background_image | img_url: 'master' }}'); background-size: cover;{% endif %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    margin-left: {{ section.settings.margin_left }}px;
    margin-right: {{ section.settings.margin_right }}px;
    display: {% if section.settings.show_on_desktop or section.settings.show_on_tablet or section.settings.show_on_mobile %}block{% else %}none{% endif %};
  ">
  <div class="content-wrapper" style="display: flex; justify-content: space-between; align-items: center; gap: 2rem;
    content-padding-top: {{ section.settings.content-padding_top }}px;
    content-padding-bottom: {{ section.settings.content-padding_bottom }}px;
    content-padding-left: {{ section.settings.content-padding_left }}px;
    content-padding-right: {{ section.settings.content-padding_right }}px;
    content-margin-top: {{ section.settings.content-margin_top }}px;
    content-margin-bottom: {{ section.settings.content-margin_bottom }}px;
    content-margin-left: {{ section.settings.content-margin_left }}px;
    content-margin-right: {{ section.settings.content-margin_right }}px;
    ">
    <div class="left-content">
      {% if section.settings.top_title != blank %}
        <div class="top-title">{{ section.settings.top_title }}</div>
      {% endif %}
      {% if section.settings.top_text != blank %}
        <div class="top-text">{{ section.settings.top_text }}</div>
      {% endif %}
      <form>
        <input type="email" placeholder="Enter Email Address Here">
        <button type="submit">{{ section.settings.button_text }}</button>
      </form>
    </div>
    {% if section.settings.right_image != blank %}
      <div class="right-image" style="flex-shrink: 0; width: {{ section.settings.right_image_width }}%;">
        <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Gift Image">
      </div>
    {% endif %}
  </div>
</section>

