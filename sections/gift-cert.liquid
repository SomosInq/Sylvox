      "max": 100,
      "step": 1,
      "label": "Content Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "content-margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Content Margin Bottom",
