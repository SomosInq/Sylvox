    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Right",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Left",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Right",
      "default": 0
    },

    {
      "type": "range",
      "id": "content-padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Content Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "content-padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Content Padding Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "content-padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Content Padding Left",
      "default": 0
    },
    {
      "type": "range",
      "id": "content-padding_right",
      "min": 0,
      "max": 100,
