{{ 'https://cdnjs.cloudflare.com/ajax/libs/flickity/2.3.0/flickity.pkgd.min.js' | script_tag }}

<style>



  .usp-icon.small { width: 32px; }
  .usp-icon.medium { width: 48px; }
  .usp-icon.large { width: 64px; }

  .usp-base-text {
    margin-top: 10px;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .usp-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 16px;
    font-size: 0.9rem;
    font-weight: bold;
    border: none;
    border-radius: 50px;
    text-decoration: none;
    transition: background 0.3s ease;
    margin-top: 12px;
    max-width: 160px;
  }

  .{{ section.id }} .usp-title {
    min-height: 52px;
  }
  .{{ section.id }} .usp-text {
    min-height: 42px;
  }

  .{{ section.id }} .usp-slider {
    display: flex;
  }

  .{{ section.id }} .usp-slider.flickity-enabled {
    display: block;
  }

  .{{ section.id }} .usp-arrow:hover {
    color: inherit;
    display: flex;
  }

  .usp-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: flex-start;
  }

  .usp-grid .usp-box,
  .usp-slider .usp-box {
    flex: 0 1 0%;
    min-width: 250px;
  }

  .usp-arrows {
    text-align: right;
    margin-top: 10px;
  }

  #shopify-section-{{ section.id }} .usp-arrow {
    background: none;
    border: 1px solid #ccc;
    padding: 6px 12px;
    margin-left: 4px;
    cursor: pointer;
    padding-bottom: 12px;
  }
  button.usp-arrow.next {
    padding-left: 16px;
}

  @media screen and (max-width: 768px) {
    .usp-grid-section {
      padding: 30px 20px !important;
    }
    .{{ section.id }} .usp-arrows {
      top: 0;
      right: 0;
      gap: 8px;
      position: relative;
      justify-content: end;
      margin-block: 20px;
    }
  }

  #shopify-section-{{ section.id }} .carousel-cell {
    opacity: 1 !important;
  }

  .usp-grid-section .carousel-cell {
    flex: none;
    margin-right: 26px;
  }
/* Flex container — left by default */
.usp-box {
display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.usp-inner {
  display: flex;
  flex-direction: column;
  gap: 12px;
  height: 100%;
  width: 100%; /* ✅ THIS IS THE FIX */
}

.usp-align-left {
  align-items: flex-start;
  text-align: left;
}

.usp-align-center {
  align-items: center;
  text-align: center;
}

.usp-align-right {
  align-items: flex-end;
  text-align: right;
}

.{{ section.id }} .usp-box {
  aspect-ratio: unset;
  height: auto;
}

@media only screen and (max-width: 768px) { 
  .usp-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .usp-grid .usp-box {
    height: 100%!important;
    aspect-ratio: unset;
    min-width: unset;
  }
}

.page-business-account .usp-grid {
    max-width: 1218px;
    margin: auto;
}

.page-business-account .usp-grid .usp-box {
    flex-grow: 1;
}

.page-business-account .usp-grid .usp-box .usp-title {
    font-weight: 400;
    font-size: 18px;
    color: #1D1D1B
}
.page-business-account .usp-grid .usp-box .usp-text {
    font-weight: 300;
    font-size: 16px;
    color: #636363
}

</style>

<section class="usp-grid-section {{ section.id }} section_width_{{ section.settings.section_width }}"
  style="padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px; margin: {{ section.settings.margin_top }}px {{ section.settings.margin_right }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_left }}px">

  {% if section.settings.heading != blank %}
    <div class="usp-heading-wrapper" style="text-align: {{ section.settings.heading_alignment }};">
      <h2 class="usp-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading }}
      </h2>
      {% if section.settings.subtext != blank %}
        <div class="usp-subtext">{{ section.settings.subtext }}</div>
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.enable_slider %}
    {% if section.settings.show_arrows %}
      <div class="usp-arrows">
        <button class="usp-arrow prev" aria-label="Previous">‹</button>
        <button class="usp-arrow next" aria-label="Next">›</button>
      </div>
    {% endif %}
    <div class="usp-slider usp-grid-flickity">
      {% for block in section.blocks %}
        <div class="usp-box carousel-cell"
          style="background-color: {{ block.settings.background_color }};
                 color: {{ block.settings.text_color }};"
          {{ block.shopify_attributes }}>
          <div class="usp-inner usp-align-{{ block.settings.content_alignment }}">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '150x150' }}" alt="{{ block.settings.title }}"
                class="usp-icon {{ block.settings.image_size }}" >
            {% endif %}
            <h3 class="usp-title" style="font-size: {{ block.settings.title_font_size }}px;">
              {{ block.settings.title }}
            </h3>
            <div class="usp-text">{{ block.settings.text }}</div>
            {% if block.settings.base_text != blank %}
              <div class="usp-base-text" style="color: {{ block.settings.base_text_color }}">
                <span>{{ block.settings.base_text }}</span>
                {% if block.settings.base_icon %}
                  <img src="{{ block.settings.base_icon | img_url: '32x32' }}" alt="Base Icon">
                {% endif %}
              </div>
            {% endif %}
            {% if block.settings.button_text != '' %}
              <a href="{{ block.settings.button_link | default: '#' }}"
                class="usp-button"
                style="background-color: {{ block.settings.button_color }};
                       color: {{ block.settings.button_text_color }};">
                <span>{{ block.settings.button_text }}</span>
                {% if block.settings.button_icon %}
                  <img src="{{ block.settings.button_icon | img_url: '32x32' }}" alt="" style="margin-left: 8px; width: 16px; height: 16px;">
                {% endif %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="usp-grid">
      {% for block in section.blocks %}
        <div class="usp-box"
          style="background-color: {{ block.settings.background_color }};
                 color: {{ block.settings.text_color }};
                 height: {{ section.settings.box_height }}px;"
          {{ block.shopify_attributes }}>
          <div class="usp-inner usp-align-{{ block.settings.content_alignment }}">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '150x150' }}" alt="{{ block.settings.title }}"
                class="usp-icon {{ block.settings.image_size }}">
            {% endif %}
            <h3 class="usp-title" style="font-size: {{ block.settings.title_font_size }}px;">
              {{ block.settings.title }}
            </h3>
            <div class="usp-text">{{ block.settings.text }}</div>
            {% if block.settings.base_text != blank %}
              <div class="usp-base-text" style="color: {{ block.settings.base_text_color }}">
                <span>{{ block.settings.base_text }}</span>
                {% if block.settings.base_icon %}
                  <img src="{{ block.settings.base_icon | img_url: '32x32' }}" alt="Base Icon">
                {% endif %}
              </div>
            {% endif %}
            {% if block.settings.button_text != '' %}
              <a href="{{ block.settings.button_link | default: '#' }}"
                class="usp-button"
                style="background-color: {{ block.settings.button_color }};
                       color: {{ block.settings.button_text_color }};">
                <span>{{ block.settings.button_text }}</span>
                {% if block.settings.button_icon %}
                  <img src="{{ block.settings.button_icon | img_url: '32x32' }}" alt="" style="margin-left: 8px; width: 16px; height: 16px;">
                {% endif %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</section>

{% if section.settings.enable_slider %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var section = document.querySelector('.{{ section.id }}');
    if (!section) return;

    var slider = section.querySelector('.usp-grid-flickity');
    if (!slider) return;

     var flkty = new Flickity(slider, {
      wrapAround: true,
      pageDots: false,
      contain: true,
      prevNextButtons: false,
      cellAlign: 'left'
    });
    var prevBtn = section.querySelector('.usp-arrow.prev');
    var nextBtn = section.querySelector('.usp-arrow.next');

    if (prevBtn && nextBtn && flkty) {
      prevBtn.addEventListener('click', () => flkty.previous());
      nextBtn.addEventListener('click', () => flkty.next());
    }
  });
</script>
{% endif %}

