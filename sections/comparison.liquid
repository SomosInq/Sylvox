{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Partial Sun Area VS. Full Sun Area"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "text-sm", "label": "Small" },
        { "value": "text-base", "label": "Base" },
        { "value": "text-lg", "label": "Large" },
        { "value": "text-xl", "label": "Extra Large" }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
      "default": "text-center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F6F6F6"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "product",
      "id": "product_one",
      "label": "Left Product"
    },
    {
      "type": "product",
      "id": "product_two",
      "label": "Right Product"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Product Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show Product Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Product Price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_options",
      "label": "Show Product Options",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "comparison_table",
      "name": "Comparison Table Row",
      "limit": 20,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Row Label"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon (optional)"
        },
        {
          "type": "text",
          "id": "left_content",
          "label": "Left Column Content"
        },
        {
          "type": "image_picker",
          "id": "left_image",
          "label": "Left Column Image (optional)"
        },
        {
          "type": "text",
          "id": "right_content",
          "label": "Right Column Content"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Right Column Image (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

<div class="{% if section.settings.full_width %}w-full{% else %}max-w-screen-lg mx-auto{% endif %}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;
            background-color: {{ section.settings.background_color }};
            {% if section.settings.background_image %}
              background-image: url({{ section.settings.background_image | img_url: '1600x' }}); background-size: cover; background-position: center;
            {% endif %}">

  {% if section.settings.title %}
    <h2 class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.description %}
    <p class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.description }}</p>
  {% endif %}

  {% assign sides = 'product_one,product_two' | split: ',' %}
  <div class="grid grid-cols-2 gap-6 my-8">
    {% for side in sides %}
      {% assign product = all_products[section.settings[side]] %}
      {% if product %}
        <div class="bg-white p-4 rounded shadow text-center">
          {% if section.settings.show_image and product.featured_image %}
            <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" class="mx-auto mb-2 rounded-md">
          {% endif %}
          {% if section.settings.show_title %}
            <h3 class="text-lg font-bold">{{ product.title }}</h3>
          {% endif %}
          {% if section.settings.show_price %}
            <p class="text-sm mb-1">{{ product.price | money }}</p>
          {% endif %}
          {% if section.settings.show_options %}
            <p class="text-xs text-gray-500">{{ product.options_with_values | join: ', ' }}</p>
          {% endif %}
          <a href="{{ product.url }}" class="inline-block mt-3 px-5 py-2 text-white bg-[#20413B] rounded-full hover:opacity-90 transition">
            Learn More
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="space-y-4 mt-10">
    {% for block in section.blocks %}
      {% if block.type == "comparison_table" %}
        <div class="grid grid-cols-3 bg-white shadow-sm rounded-lg p-6 items-center text-center">
          <div>
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '40x' }}" class="mx-auto mb-2">
            {% endif %}
            <p class="font-semibold text-sm">{{ block.settings.label }}</p>
          </div>
          <div>
            {% if block.settings.left_image %}
              <img src="{{ block.settings.left_image | img_url: '60x' }}" class="mx-auto mb-2">
            {% endif %}
            <p class="text-sm">{{ block.settings.left_content }}</p>
          </div>
          <div>
            {% if block.settings.right_image %}
              <img src="{{ block.settings.right_image | img_url: '60x' }}" class="mx-auto mb-2">
            {% endif %}
            <p class="text-sm">{{ block.settings.right_content }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
