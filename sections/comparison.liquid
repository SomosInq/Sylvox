{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Partial Sun Area VS. Full Sun Area"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "text-sm", "label": "Small" },
        { "value": "text-base", "label": "Base" },
        { "value": "text-lg", "label": "Large" },
        { "value": "text-xl", "label": "Extra Large" }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
      "default": "text-center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "table_background_color",
      "label": "Table Background Color",
      "default": "#f6f6f6"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "product",
      "id": "product_one",
      "label": "Left Product"
    },
    {
      "type": "product",
      "id": "product_two",
      "label": "Right Product"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Product Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show Product Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Product Price",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_options",
      "label": "Show Product Options",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "comparison_table",
      "name": "Comparison Table Row",
      "limit": 20,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Row Label"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Label Icon"
        },
        {
          "type": "text",
          "id": "left_text",
          "label": "Left Product Value"
        },
        {
          "type": "image_picker",
          "id": "left_icon",
          "label": "Left Icon"
        },
        {
          "type": "text",
          "id": "right_text",
          "label": "Right Product Value"
        },
        {
          "type": "image_picker",
          "id": "right_icon",
          "label": "Right Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

<div class="{% if section.settings.full_width %}w-full{% else %}max-w-screen-xl mx-auto{% endif %}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; background-color: {{ section.settings.background_color }};">

  {% if section.settings.title %}
    <h2 class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.description %}
    <p class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.description }}</p>
  {% endif %}

  <div class="flex flex-wrap justify-center items-start gap-12 mt-8 mb-12">
    {% assign products = 'product_one,product_two' | split: ',' %}
    {% for key in products %}
      {% assign product = all_products[section.settings[key]] %}
      {% if product %}
        <div class="w-full sm:w-72 text-center">
          {% if section.settings.show_image and product.featured_image %}
            <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" class="mx-auto mb-3 rounded-md">
          {% endif %}
          {% if section.settings.show_title %}
            <h3 class="text-lg font-semibold">{{ product.title }}</h3>
          {% endif %}
          {% if section.settings.show_price %}
            <p class="text-sm">{{ product.price | money }}</p>
          {% endif %}
          {% if section.settings.show_options %}
            <p class="text-xs text-gray-500">{{ product.options_with_values | join: ', ' }}</p>
          {% endif %}
          <a href="{{ product.url }}" class="mt-3 inline-block px-6 py-2 text-white bg-[#20413B] rounded-full hover:opacity-90 transition">
            Learn More
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="rounded-lg p-6" style="background-color: {{ section.settings.table_background_color }}">
    {% for block in section.blocks %}
      {% if block.type == "comparison_table" %}
        <div class="grid grid-cols-3 gap-4 items-center py-4 border-b border-gray-200 last:border-0 text-center">
          <div>
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '40x' }}" class="mx-auto mb-1">
            {% endif %}
            <p class="font-medium">{{ block.settings.label }}</p>
          </div>
          <div>
            {% if block.settings.left_icon %}
              <img src="{{ block.settings.left_icon | img_url: '40x' }}" class="mx-auto mb-1">
            {% endif %}
            <p>{{ block.settings.left_text }}</p>
          </div>
          <div>
            {% if block.settings.right_icon %}
              <img src="{{ block.settings.right_icon | img_url: '40x' }}" class="mx-auto mb-1">
            {% endif %}
            <p>{{ block.settings.right_text }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
