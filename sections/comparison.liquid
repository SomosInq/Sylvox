{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Partial Sun Area VS. Full Sun Area"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "text-sm", "label": "Small" },
        { "value": "text-base", "label": "Base" },
        { "value": "text-lg", "label": "Large" },
        { "value": "text-xl", "label": "Extra Large" }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
      "default": "text-center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Section Background Image"
    },
    {
      "type": "color",
      "id": "table_background_color",
      "label": "Table Background Color",
      "default": "#f6f6f6"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "product",
      "id": "product_one",
      "label": "Left Product"
    },
    {
      "type": "product",
      "id": "product_two",
      "label": "Right Product"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Product Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show Product Image",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "comparison_table",
      "name": "Comparison Table Row",
      "limit": 20,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Row Label"
        },
        {
          "type": "image_picker",
          "id": "label_icon",
          "label": "Label Icon"
        },
        {
          "type": "text",
          "id": "left_text",
          "label": "Left Value"
        },
        {
          "type": "image_picker",
          "id": "left_icon",
          "label": "Left Icon"
        },
        {
          "type": "text",
          "id": "right_text",
          "label": "Right Value"
        },
        {
          "type": "image_picker",
          "id": "right_icon",
          "label": "Right Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

<div class="{% if section.settings.full_width %}w-full{% else %}max-w-screen-xl mx-auto{% endif %}"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.background_image %}
      background-image: url({{ section.settings.background_image | img_url: '1600x' }});
      background-size: cover;
      background-position: center;
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  ">

  {% if section.settings.title %}
    <h2 class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.description %}
    <p class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.description }}</p>
  {% endif %}

  {% assign products = '' | split: ',' %}
  {% assign products = products | push: all_products[section.settings.product_one] %}
  {% assign products = products | push: all_products[section.settings.product_two] %}

  <div class="flex justify-end gap-12 text-center mt-12 mb-12">
    {% for product in products %}
      {% if product %}
        <div class="flex flex-col items-center max-w-xs">
          {% if section.settings.show_image and product.featured_image %}
            <img src="{{ product.featured_image | img_url: '300x' }}" alt="{{ product.title }}" class="mb-2 rounded">
          {% endif %}
          {% if section.settings.show_title %}
            <h3 class="text-sm font-medium mb-2">{{ product.title }}</h3>
          {% endif %}
          <a href="{{ product.url }}" class="mt-1 inline-block px-5 py-2 bg-[#20413B] text-white rounded-full hover:opacity-90 transition">
            Learn More
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="rounded-lg px-4 sm:px-6 py-6" style="background-color: {{ section.settings.table_background_color }};">
    {% for block in section.blocks %}
      {% if block.type == "comparison_table" %}
        <div class="grid grid-cols-3 items-center py-5 border-b border-gray-200 last:border-0">
          <div class="text-left flex items-center space-x-2">
            {% if block.settings.label_icon %}
              <img src="{{ block.settings.label_icon | img_url: '32x' }}" class="inline-block" />
            {% endif %}
            <span class="font-medium text-sm">{{ block.settings.label }}</span>
          </div>
          <div class="text-center text-sm">
            {% if block.settings.left_icon %}
              <img src="{{ block.settings.left_icon | img_url: '32x' }}" class="mx-auto mb-1" />
            {% endif %}
            <p>{{ block.settings.left_text }}</p>
          </div>
          <div class="text-center text-sm">
            {% if block.settings.right_icon %}
              <img src="{{ block.settings.right_icon | img_url: '32x' }}" class="mx-auto mb-1" />
            {% endif %}
            <p>{{ block.settings.right_text }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
