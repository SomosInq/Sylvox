{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-table",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Partial Sun Area VS. Full Sun Area"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "text-sm", "label": "Small" },
        { "value": "text-base", "label": "Base" },
        { "value": "text-lg", "label": "Large" },
        { "value": "text-xl", "label": "Extra Large" }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
      "default": "text-center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Table Background Color",
      "default": "#F6F6F6"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 40,
      "step": 4,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Compare Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "show_title",
          "label": "Show Product Title",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_image",
          "label": "Show Image",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_price",
          "label": "Show Price",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_options",
          "label": "Show Options",
          "default": true
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn More"
        }
      ]
    },
    {
      "type": "row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "row_title",
          "label": "Row Title"
        },
        {
          "type": "image_picker",
          "id": "title_image",
          "label": "Title Icon (Optional)"
        },
        {
          "type": "text",
          "id": "left_text",
          "label": "Left Column Text"
        },
        {
          "type": "image_picker",
          "id": "left_image",
          "label": "Left Column Image (Optional)"
        },
        {
          "type": "text",
          "id": "right_text",
          "label": "Right Column Text"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Right Column Image (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

<div class="comparison-table-wrapper {% if section.settings.full_width %}w-full{% else %}max-w-screen-lg mx-auto{% endif %}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;
            background-color: {{ section.settings.background_color }};
            {% if section.settings.background_image %}
              background-image: url({{ section.settings.background_image | img_url: '1600x' }}); background-size: cover; background-position: center;
            {% endif %}">

  {% if section.settings.title %}
    <h2 class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.settings.description %}
    <p class="{{ section.settings.font_size }} {{ section.settings.text_alignment }}" style="color: {{ section.settings.font_color }}">{{ section.settings.description }}</p>
  {% endif %}

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start my-8">
    <div class="col-span-2 space-y-4">
      {% for block in section.blocks %}
        {% if block.type == 'row' %}
          <div class="grid grid-cols-3 items-center bg-white rounded-lg shadow p-4">
            <div class="flex flex-col items-center">
              {% if block.settings.title_image %}
                <img src="{{ block.settings.title_image | img_url: '80x' }}" class="mb-2">
              {% endif %}
              <strong>{{ block.settings.row_title }}</strong>
            </div>
            <div class="text-center">
              {% if block.settings.left_image %}
                <img src="{{ block.settings.left_image | img_url: '60x' }}" class="mx-auto mb-2">
              {% endif %}
              <p>{{ block.settings.left_text }}</p>
            </div>
            <div class="text-center">
              {% if block.settings.right_image %}
                <img src="{{ block.settings.right_image | img_url: '60x' }}" class="mx-auto mb-2">
              {% endif %}
              <p>{{ block.settings.right_text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="space-y-8">
      {% for block in section.blocks %}
        {% if block.type == 'product' %}
          {% assign p = block.settings.product %}
          <div class="product-box text-center bg-white p-4 rounded-lg shadow">
            {% if block.settings.show_image and p.featured_image %}
              <img src="{{ p.featured_image | img_url: '400x' }}" class="mb-4 w-full h-auto rounded-md" alt="{{ p.title }}">
            {% endif %}
            {% if block.settings.show_title %}
              <h3 class="text-lg font-semibold mb-2">{{ p.title }}</h3>
            {% endif %}
            {% if block.settings.show_price %}
              <p class="mb-2">{{ p.price | money }}</p>
            {% endif %}
            {% if block.settings.show_options %}
              <p class="mb-2 text-sm">{{ p.options_with_values | join: ', ' }}</p>
            {% endif %}
            {% if block.settings.button_link %}
              <a href="{{ block.settings.button_link }}"
                 class="inline-block px-5 py-2 rounded-full bg-[#20413B] text-white hover:opacity-90 transition">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
