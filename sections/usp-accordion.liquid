{% schema %}
{
  "name": "USP Accordion",
  "tag": "section",
  "class": "usp-accordion-section",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {
      "type": "select",
      "id": "section_content_width",
      "label": "Content Width",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "50% Width" },
        { "value": "full", "label": "Full Width" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Set Up in Minutes, Enjoy for Years."
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Designed for convenience, Deck Pro 2.0 sets up in minutes, so you can get straight to watching."
    },
    {
      "type": "color",
      "id": "section_title_color",
      "label": "Section Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "section_description_color",
      "label": "Section Description Color",
      "default": "#333333"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Accordion Title",
      "default": "Quick & Simple Installation"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Accordion Description",
      "default": "No Professionals Required"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Accordion Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "label": "Font Size (px)",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle (Optional)"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon (Optional)"
        },
        {
          "type": "image_picker",
          "id": "associated_image",
          "label": "Associated Image"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "USP Accordion",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.usp-accordion-section {
  background-color: {{ section.settings.background_color }};
  {% if section.settings.background_image != blank %}
    background-image: url({{ section.settings.background_image | image_url }});
    background-size: cover;
    background-position: center;
  {% endif %}
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
}

.accordion-wrapper {
  display: flex;
  align-items: stretch;
  gap: 2rem;
}

.accordion-left {
  flex: 1;
}

.accordion-left img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.accordion-right {
  background: #20413B;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.accordion {
  color: var(--Light-Grey, #C6C6C6);
  font-size: {{ section.settings.font_size }}px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  padding: 2rem;
}

.accordion-item {
  display: flex;
  flex-direction: column;
}

.accordion-header {
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  transition: font-size 0.3s ease;
}

.accordion-item.active .accordion-header span {
  font-size: 1.5em;
}

.accordion-icon {
  transition: transform 0.3s ease;
}

.accordion-icon.rotate {
  transform: rotate(180deg);
}

.accordion-content {
  display: none;
  padding: 0 0 1rem;
}

.accordion-content.active {
  display: block;
}

.accordion-subtitle {
  font-size: 0.875rem;
  color: #A7DCB7;
  margin-bottom: 0.5rem;
  font-weight: 500;
}
{% endstyle %}

<div class="section_width_{{ section.settings.section_width }}">
  <div class="section_content_width_{{ section.settings.section_content_width }} usp-accordion-section">
    <div style="text-align: center; margin-bottom: 2rem;">
      {% if section.settings.section_heading %}
        <h2 style="color: {{ section.settings.section_title_color }}">{{ section.settings.section_heading }}</h2>
      {% endif %}
      {% if section.settings.section_description %}
        <p style="color: {{ section.settings.section_description_color }}">{{ section.settings.section_description }}</p>
      {% endif %}
      {% if section.settings.button_text and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" style="display:inline-block; margin-top:1rem; padding:0.5rem 1.5rem; background:#20413B; color:white; text-decoration:none; border-radius:4px;">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>

    <div class="accordion-wrapper">
      <div class="accordion-left">
        <img id="dynamic-accordion-image" src="{% for block in section.blocks limit:1 %}{{ block.settings.associated_image | image_url }}{% endfor %}" alt="Accordion Image" />
      </div>
      <div class="accordion-right">
        <div class="accordion">
          <h2>{{ section.settings.title }}</h2>
          <p>{{ section.settings.text }}</p>
          {% for block in section.blocks %}
            <div class="accordion-item" data-index="{{ forloop.index }}" data-image="{{ block.settings.associated_image | image_url }}">
              <div class="accordion-header" onclick="toggleAccordion({{ forloop.index }})">
                <span>{{ block.settings.question }}</span>
                {% if block.settings.icon %}
                  <img src="{{ block.settings.icon | image_url }}" class="accordion-icon" id="icon-{{ forloop.index }}" width="20" />
                {% else %}
                  <span class="accordion-icon" id="icon-{{ forloop.index }}">â–¼</span>
                {% endif %}
              </div>
              <div class="accordion-content" id="content-{{ forloop.index }}">
                {% if block.settings.subtitle %}
                  <div class="accordion-subtitle">{{ block.settings.subtitle }}</div>
                {% endif %}
                <div>{{ block.settings.answer }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleAccordion(index) {
  document.querySelectorAll('.accordion-content').forEach((content, i) => {
    const icon = document.getElementById(`icon-${i + 1}`);
    const contentEl = document.getElementById(`content-${i + 1}`);
    const itemEl = contentEl.closest('.accordion-item');
    if (i + 1 === index) {
      const isActive = contentEl.classList.contains('active');
      contentEl.classList.toggle('active', !isActive);
      icon?.classList.toggle('rotate', !isActive);
      itemEl.classList.toggle('active', !isActive);
    } else {
      contentEl.classList.remove('active');
      icon?.classList.remove('rotate');
      itemEl.classList.remove('active');
    }
  });

  const clickedItem = document.querySelector(`.accordion-item[data-index="${index}"]`);
  const newImage = clickedItem.getAttribute('data-image');
  const imageEl = document.getElementById('dynamic-accordion-image');
  if (newImage && imageEl) {
    imageEl.src = newImage;
  }
}
</script>
