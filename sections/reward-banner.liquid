{%- render 'section-reward-banner' -%}
{% schema %}
  {
    "name": "Reward Banner",
    "settings": [
    {
      "id": "banner_title",
      "type": "text",
      "label": "t:labels.heading",
      "default": "Reward Program"
    },
    {
      "type": "color",
      "id": "banner_title_color",
      "label": "Title text Color",
      "default": "#fff"
    },
    {
      "id": "banner_sub_title_one",
      "type": "textarea",
      "label": "Content Text One Row",
      "default": "Join the SylvoxCredits"
    },
    {
      "id": "banner_sub_title_Two",
      "type": "textarea",
      "label": "Content Text Two Row",
      "default": "Rewards Program"
    },
    {
      "type": "color",
      "id": "banner_sub_title_color",
      "label": "SubTitle text Color",
      "default": "#efefef"
    },
    {
      "type": "range",
      "id": "height",
      "label": "t:labels.section_height",
      "default": 400,
      "min": 400,
      "max": 750,
      "step": 50,
      "unit": "px"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:labels.image",
      "info": "Reward Banner Background Image"
    },
    {
      "type": "text",
      "id": "btn_one_text",
      "label": "Sign up text",
      "default": "Sign Up"
    },
    {
      "type": "url",
      "id": "btn_one_link",
      "label": "t:labels.button_link"
    },
    {
      "type": "text",
      "id": "btn_two_text",
      "label": "Login in text",
      "default": "Login in"
    },
    {
      "type": "url",
      "id": "btn_two_link",
      "label": "t:labels.button_link"
    },
  ],
    "presets": [
    {
      "name": "Reward Banner"
    }
  ],
  }
{% endschema %}