{% comment %}
  Custom section: Affiliate Banner | affiliate-banner.liquid
{% endcomment %}

<div class="affiliate-banner" id="affiliate-banner-{{ section.id }}">
  <div
    class="affiliate-banner__background"
  >
    <div class="affiliate-banner__overlay">
      <div class="affiliate-banner__content">
        <p class="affiliate-banner__eyebrow">{{ section.settings.eyebrow_text }}</p>
        <h2 class="affiliate-banner__heading">{{ section.settings.heading }}</h2>
        <div class="affiliate-banner__buttons">
          <a href="{{ section.settings.button_1_link }}" class="affiliate-banner__button">
            {{ section.settings.button_1_label }}
            {{ 'arrow-top-right-small.svg' | inline_asset_content }}
          </a>
          <a href="{{ section.settings.button_2_link }}" class="affiliate-banner__button">
            {{ section.settings.button_2_label }}
            {{ 'arrow-top-right-small.svg' | inline_asset_content }}
          </a>
        </div>
      </div>
    </div>
  </div>

  {% style %}
    .affiliate-banner {
      width: 100%;
      height: 600px;
      position: relative;
    }

    .affiliate-banner__background {
      background: url('{{ section.settings.banner_image | image_url: width: 1920 }}') center/cover no-repeat;
      background: radial-gradient(ellipse 32.84% 32.84% at 50% 50%, rgba(10, 10, 10, 0.28) 0%, rgba(10, 10, 10, 0) 100%), url('{{ section.settings.banner_image | image_url: width: 1920 }}') center/cover no-repeat;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      width: 100%;
      height: auto;
      aspect-ratio: 1920 / 600;
      object-fit: cover;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .affiliate-banner__overlay {
      display: inline-flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 10px;
      height: 100%;
      width: 100%;
    }

    .affiliate-banner__content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      color: white;
    }

    .affiliate-banner__eyebrow {
      font-size: 18px;
      font-family: 'Questrial', sans-serif;
      font-weight: 400;
      height: 31px;
      margin-bottom: 8px;
    }

    .affiliate-banner__heading {
      font-size: 56px;
      font-family: 'Questrial', sans-serif;
      font-weight: 400;
      width: 508px;
      color: #ffffff;
      margin-bottom: 80px;
    }

    .affiliate-banner__buttons {
      display: inline-flex;
      justify-content: flex-start;
      align-items: flex-start;
      gap: 20px;
    }

    .affiliate-banner__button {
      padding: 12px 20px;
      background: #0a0a0a;
      border-radius: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 14px;
      font-size: 18px;
      font-family: 'Questrial', sans-serif;
      font-weight: 400;
      color: #ffffff;
      text-decoration: none;
    }

    .affiliate-banner__button:hover {
      background-color: #2e2e2e;
    }

    @media screen and (max-width: 767px) {
      .affiliate-banner {
        height: 354px;
      }

      .affiliate-banner__background {
        background: url('{% if section.settings.banner_image_mobile != blank %}{{ section.settings.banner_image_mobile | image_url: width: 768 }}{% else %}{{ section.settings.banner_image | image_url: width: 1920 }}{% endif %}') center/cover no-repeat;
        background: linear-gradient(180deg, rgba(10, 10, 10, 0.73) 14%, rgba(10, 10, 10, 0) 100%), url('{% if section.settings.banner_image_mobile != blank %}{{ section.settings.banner_image_mobile | image_url: width: 768 }}{% else %}{{ section.settings.banner_image | image_url: width: 1920 }}{% endif %}') center/cover no-repeat;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100%;
      }

      .affiliate-banner__overlay {
        padding: 26px 44px;
        height: 100%;
      }

      .affiliate-banner__content {
        width: 303px;
        height: 296px;
        flex-direction: column;
        align-items: center;
        display: flex;
      }

      .affiliate-banner__eyebrow {
        font-size: 14px;
        margin-bottom: 8px;
      }

      .affiliate-banner__heading {
        font-size: 24px;
        width: 189px;
        margin-bottom: 20px;
      }

      .affiliate-banner__buttons {
        flex-direction: column;
        gap: 10px;
        align-items: flex-start;
      }

      .affiliate-banner__button {
        width: 264px;
        justify-content: center;
      }
    }

  {% endstyle %}
</div>

{% schema %}
{
  "name": "Affiliate Banner",
  "tag": "section",
  "class": "affiliate-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Affiliate Program"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Vantrue Affiliate Program"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Button 1 Label",
      "default": "Join Affiliate CJ"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Button 2 Label",
      "default": "Join Affiliate Sharesale"
    }
  ],
  "presets": [
    {
      "name": "Affiliate Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
