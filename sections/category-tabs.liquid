<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const categoryTabs = document.querySelectorAll(`#shopify-section-${sectionId} .category-tab`);
    const productGrids = document.querySelectorAll(`#shopify-section-${sectionId} .product-grid`);
    const activeColor = "{{ section.settings.button_bg_color }}";
    const activeTextColor = "{{ section.settings.button_text_color }}";
    
    categoryTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const categoryId = this.getAttribute('data-category');
        
        // Update active tab
        categoryTabs.forEach(t => {
          t.classList.remove('active');
          t.style.backgroundColor = '';
          t.style.color = '';
        });
        
        this.classList.add('active');
        this.style.backgroundColor = activeColor;
        this.style.color = activeTextColor;
        
        // Show corresponding product grid
        productGrids.forEach(grid => {
          grid.classList.remove('active');
          
          if (grid.getAttribute('data-category-products') === categoryId) {
            grid.classList.add('active');
          }
        });
      });
    });
  });
</script>