{% endschema %}

<div id="{{ section.settings.section_id }}" class="category-product-showcase" style="background-color: {{ section.settings.background_color }};">
  <div class="showcase-container" style="max-width: {{ section.settings.max_width }}px;">
   {% if section.settings.heading_line1 != blank or section.settings.heading_line2 != blank or section.settings.heading_line3 != blank %}
    <div class="showcase-header">
      <h1 class="showcase-heading">
        <span class="heading-line1" >
        {{ section.settings.heading_line1_1 }} 
          <span style="background: {{ section.settings.heading_color_1_desktop }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;">{{ section.settings.heading_line1 }}</span>
          {{ section.settings.heading_line1_1 }}
        </span>
        <span class="heading-line2" style="background: {{ section.settings.heading_color_2_desktop }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;">{{ section.settings.heading_line2 }}</span>
        <span class="heading-line3" style="background: {{ section.settings.heading_color_3_desktop }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;">{{ section.settings.heading_line3 }}</span>
      </h1>
      
      <div class="showcase-description">
        {{ section.settings.description | newline_to_br }}
      </div>
    </div>
    {% endif %}
    <div class="category-tabs">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <button class="category-tab {% if block.settings.is_active %}active{% endif %}" 
                  data-category="{{ block.id }}"
                  {% if block.settings.is_active %}
                  style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
                  {% endif %}
                  {{ block.shopify_attributes }}>
            {{ block.settings.category_name }}
          </button>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="product-grid-container">
      {% for block in section.blocks %}
        {% if block.type == 'category' and block.settings.collection != blank %}
          <div class="product-grid {% if block.settings.is_active %}active{% endif %}" data-category-products="{{ block.id }}">
            {% assign collection = collections[block.settings.collection] %}
            {% assign products_to_show = block.settings.products_to_show %}
            
            {% for product in collection.products limit: products_to_show %}
              <div class="product-card">
                {% if product.compare_at_price > product.price %}
                  {% assign discount_amount = product.compare_at_price | minus: product.price %}
                  <div class="discount-badge" >
               <div class="td-pentagon">  </div>
           <span class="td-discount">
     {{ discount_amount  | money | split: '.' | first}} OFF
    </span>  
           
            </div>
                {% endif %}
                
                <a href="{{ product.url }}" class="product-image-link">
                  <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" class="product-image">
                </a>
                
                <div class="product-info">
                  <h3 class="product-title">{{ product.title }}</h3>
                  
                  <div class="product-price">
                    <span class="current-price" style="color: {{ section.settings.price_color }};">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="compare-price">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  
                  <div class="product-buttons">
                    <a href="{{ product.url }}" class="buy-now-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
                      Buy Now
                    </a>
                    <a href="{{ product.url }}" class="learn-more-button">
                      Learn More
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
