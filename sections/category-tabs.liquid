      "step": 2,
      "unit": "px",
      "label": "Heading Line 1 Font Size (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_mobile_2",
      "min": 10,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 2 Font Size (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_mobile_3",
      "min": 10,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 3 Font Size (Mobile)",
      "default": 32
    },
   
    {
      "type": "range",
      "id": "description_size_mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Description Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color_mobile",
