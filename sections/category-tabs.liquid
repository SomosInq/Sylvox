   background:url({{ section.settings.discount_bg_image | img_url:""}}) ;
    position: absolute;
    height: 50px;
    width: 50px;
    background-size: cover;
    left: 0;
    top: 0;
  }
     #shopify-section-{{ section.id}} .td-discount {
    position: absolute;
    top: 5px;
   left: 0px;
    z-index: 26;
    font-size: {{ section.settings.discount_size }}px;
    font-weight: 700;
    color: {{ section.settings.discount_color }};

     line-height: normal;
}
    {% else %}
