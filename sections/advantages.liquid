{% schema %}
{
  "name": "Advantages Showcase",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "This ID will be used for page navigation. Must match with the navigation item's section ID.",
      "default": "section1"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
     {
      "type": "text",
      "id": "heading_line1_1",
      "label": "Heading Line img"
    },
    {
      "type": "text",
      "id": "heading_line1",
      "label": "Heading Line 1",
      "default": "Loved by our"
    },
    {
      "type": "text",
      "id": "heading_line1_2",
      "label": "Heading Line img"
    },
     {
      "type": "color_background",
      "id": "heading_color_1_desktop",
      "label": "Heading Line 1 Color"
    },
  
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Sign up now for exclusive discounts and a special gift!\nDon't miss out on the spring savings!"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Maximum Width",
      "default": 900
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Desktop Text Styling"
    },
    {
      "type": "range",
      "id": "heading_size_desktop_1",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 1 Font Size (Desktop)",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_size_desktop_2",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 2 Font Size (Desktop)",
      "default": 48
    },
   
    {
      "type": "color",
      "id": "heading_color_2_desktop",
      "label": "Heading Line 2 Color (Desktop)",
      "default": "#B06A8A"
    },
    {
      "type": "range",
      "id": "description_size_desktop",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "color",
      "id": "description_color_desktop",
      "label": "Description Text Color (Desktop)",
      "default": "#777777"
    },
    {
      "type": "range",
      "id": "feature_title_size_desktop",
      "min": 14,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Feature Title Font Size (Desktop)",
      "default": 18
    },
    {
      "type": "color",
      "id": "feature_title_color_desktop",
      "label": "Feature Title Color (Desktop)",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "feature_text_size_desktop",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Feature Text Font Size (Desktop)",
      "default": 16
    },
    {
      "type": "color",
      "id": "feature_text_color_desktop",
      "label": "Feature Text Color (Desktop)",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Mobile Text Styling"
    },
    {
      "type": "range",
      "id": "heading_size_mobile_1",
      "min": 20,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 1 Font Size (Mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_mobile_2",
      "min": 20,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Line 2 Font Size (Mobile)",
      "default": 32
    },
   
   
    {
      "type": "range",
      "id": "description_size_mobile",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Description Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color_mobile",
      "label": "Description Text Color (Mobile)",
      "default": "#777777"
    },
    {
      "type": "range",
      "id": "feature_title_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Feature Title Font Size (Mobile)",
      "default": 16
    },
    {
      "type": "color",
      "id": "feature_title_color_mobile",
      "label": "Feature Title Color (Mobile)",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "feature_text_size_mobile",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Feature Text Font Size (Mobile)",
      "default": 14
    },
    {
      "type": "color",
      "id": "feature_text_color_mobile",
      "label": "Feature Text Color (Mobile)",
      "default": "#666666"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Feature Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Advantages Showcase",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "30 Days",
            "text": "Money-back Guarantee"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "1 Years",
            "text": "Warranty"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "2-5 days",
            "text": "Delivery"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Lifetime",
            "text": "Customer Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div id="{{ section.settings.section_id }}" class="advantages-showcase" style="background-color: {{ section.settings.background_color }};">
  <div class="advantages-container" style="max-width: {{ section.settings.max_width }}px;">
    <div class="advantages-header">
      <h2 class="advantages-heading">
        <span class="heading-line1" >
        {{ section.settings.heading_line1_1 }} 
          <span style="background: {{ section.settings.heading_color_1_desktop }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;">{{ section.settings.heading_line1 }}</span>
          {{ section.settings.heading_line1_1 }}
        </span>
      </h2>
      
      <div class="advantages-description">
        {{ section.settings.description | newline_to_br }}
      </div>
    </div>
    
    <div class="features-grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="feature-item" {{ block.shopify_attributes }}>
            {% if block.settings.icon %}
              <div class="feature-icon">
                <img src="{{ block.settings.icon | img_url: '100x100', crop: 'center' }}" alt="{{ block.settings.title }}">
              </div>
            {% endif %}
            
            <div class="feature-title">{{ block.settings.title }}</div>
            <div class="feature-text">{{ block.settings.text }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} .advantages-showcase {
    padding: 60px 0;
    width: 100%;
  }
  
  #shopify-section-{{ section.id }} .advantages-container {
    margin: 0 auto;
    padding: 0 20px;
  }
  
  #shopify-section-{{ section.id }} .advantages-header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  #shopify-section-{{ section.id }} .advantages-heading {
    margin-bottom: 20px;
    line-height: 1.2;
    font-weight: 600;
  }
  
  #shopify-section-{{ section.id }} .heading-line1,
  #shopify-section-{{ section.id }} .heading-line2 {
    display: inline;
  }
  
  #shopify-section-{{ section.id }} .advantages-description {
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  #shopify-section-{{ section.id }} .features-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }
  
  #shopify-section-{{ section.id }} .feature-item {
    flex: 1;
   width: calc(25% - 10px);
    max-width: 250px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  #shopify-section-{{ section.id }} .feature-icon {
    width: 100px;
    height: 100px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  #shopify-section-{{ section.id }} .feature-icon img {
    max-width: 100%;
    max-height: 100%;
  }
  
  #shopify-section-{{ section.id }} .feature-title {
    font-weight: 600;
    margin-bottom: 5px;
  }
  
  /* Desktop Styles */
  @media screen and (min-width: 769px) {
    #shopify-section-{{ section.id }} .heading-line1 {
      font-size: {{ section.settings.heading_size_desktop_1 }}px;
      color: {{ section.settings.heading_color_1_desktop }};
    }
    
    #shopify-section-{{ section.id }} .heading-line2 {
      font-size: {{ section.settings.heading_size_desktop_2 }}px;
      color: {{ section.settings.heading_color_2_desktop }};
    }
    
    #shopify-section-{{ section.id }} .advantages-description {
      font-size: {{ section.settings.description_size_desktop }}px;
      color: {{ section.settings.description_color_desktop }};
    }
    
    #shopify-section-{{ section.id }} .feature-title {
      font-size: {{ section.settings.feature_title_size_desktop }}px;
      color: {{ section.settings.feature_title_color_desktop }};
    }
    
    #shopify-section-{{ section.id }} .feature-text {
      font-size: {{ section.settings.feature_text_size_desktop }}px;
      color: {{ section.settings.feature_text_color_desktop }};
    }
  }
  
  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .advantages-showcase {
      padding: 40px 0;
    }
    
    #shopify-section-{{ section.id }} .heading-line1 {
      font-size: {{ section.settings.heading_size_mobile_1 }}px;
      color: {{ section.settings.heading_color_1_mobile }};
    }
    
    #shopify-section-{{ section.id }} .heading-line2 {
      font-size: {{ section.settings.heading_size_mobile_2 }}px;
      color: {{ section.settings.heading_color_2_mobile }};
    }
    
    #shopify-section-{{ section.id }} .advantages-description {
      font-size: {{ section.settings.description_size_mobile }}px;
      color: {{ section.settings.description_color_mobile }};
    }
    
    #shopify-section-{{ section.id }} .feature-title {
      font-size: {{ section.settings.feature_title_size_mobile }}px;
      color: {{ section.settings.feature_title_color_mobile }};
    }
    
    #shopify-section-{{ section.id }} .feature-text {
      font-size: {{ section.settings.feature_text_size_mobile }}px;
      color: {{ section.settings.feature_text_color_mobile }};
    }
    
    #shopify-section-{{ section.id }} .features-grid {
      gap: 20px;
    }
    
    #shopify-section-{{ section.id }} .feature-item {
      min-width: 150px;
    }
  }
  
  @media screen and (max-width: 480px) {
    
    
    #shopify-section-{{ section.id }} .feature-item {
      max-width: 100%;
    }
  }
</style>