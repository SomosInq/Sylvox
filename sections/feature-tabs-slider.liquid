{% schema %}
{
  "name": "Feature Tabs Slider",
  "tag": "section",
  "class": "feature-tabs-slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed (seconds)",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab Slide",
      "settings": [
        {
          "type": "text",
          "id": "tab_label",
          "label": "Tab Label",
          "default": "5.2K Image Quality"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "5.2K Image Quality â€“ Every Pixel Counts"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Experience ultra-clear footage with 5184x1944P resolution..."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Feature Tabs Slider",
        "category": "Custom",
      "blocks": [
        { "type": "tab" },
        { "type": "tab" },
        { "type": "tab" }
      ]
    }
  ]
}
{% endschema %}

<div class="feature-tabs-slider-wrapper" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}">
  <div class="tab-nav">
    {% for block in section.blocks %}
      <button class="tab-btn{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}">
        {{ block.settings.tab_label }}
      </button>
    {% endfor %}
    <div class="underline" style="--tabs-count: {{ section.blocks.size }}"></div>
  </div>

  <div class="tab-slides">
    {% for block in section.blocks %}
      <div class="tab-slide{% if forloop.first %} active{% endif %}">
        {% if block.settings.image %}
          <div class="tab-image">
            <img src="{{ block.settings.image | image_url: width: 1920 }}" loading="lazy" alt="{{ block.settings.heading }}">
          </div>
        {% endif %}
        <div class="tab-content">
          <h2>{{ block.settings.heading }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="progress-bar">
    <div class="bar-fill"></div>
  </div>

  <div class="pagination-dots">
    {% for block in section.blocks %}
      <span class="dot{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}"></span>
    {% endfor %}
  </div>
</div>

<style>
.feature-tabs-slider-wrapper {
  width: 100%;
  position: relative;
  background: #fff;
  overflow: hidden;
}

.tab-nav {
  display: flex;
  justify-content: center;
  position: relative;
  border-bottom: 1px solid #c8c8c8;
  overflow-x: auto;
}

.tab-btn {
  background: transparent;
  border: none;
  font-weight: 500;
  padding: 1rem 1.5rem;
  font-size: 1rem;
  cursor: pointer;
  white-space: nowrap;
  position: relative;
  color: #101820;
}

.tab-btn.active {
  font-weight: 700;
}

.underline {
  position: absolute;
  bottom: 0;
  height: 2px;
  background: #101820;
  transition: left 0.3s ease, width 0.3s ease;
  width: calc(100% / var(--tabs-count));
  left: 0;
}

.tab-slides {
  position: relative;
  overflow: hidden;
  min-height: 600px;
}

.tab-slide {
  display: none;
  position: absolute;
  width: 100%;
  transition: opacity 0.4s ease;
  top: 0;
  left: 0;
}

.tab-slide.active {
  display: block;
  position: relative;
}

.tab-image {
  width: 100%;
  aspect-ratio: 16/9;
  overflow: hidden;
  background: #ccc;
}

.tab-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.tab-content {
  position: absolute;
  bottom: 2rem;
  left: 2rem;
  color: #fff;
  max-width: 600px;
  z-index: 2;
  text-shadow: 0 1px 2px rgba(0,0,0,0.6);
}

.tab-content h2 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

.tab-content p {
  font-size: 1rem;
  opacity: 0.95;
}

.progress-bar {
  height: 4px;
  background: #e2e2e2;
  width: 100%;
  margin-top: 1rem;
  position: relative;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  width: 0%;
  background: #2b5e2a;
  transition: width linear;
}

.pagination-dots {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin: 1rem 0 2rem;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #bbb;
  cursor: pointer;
}

.dot.active {
  background: #101820;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const wrapper = document.querySelector(".feature-tabs-slider-wrapper");
  const tabs = wrapper.querySelectorAll(".tab-btn");
  const slides = wrapper.querySelectorAll(".tab-slide");
  const underline = wrapper.querySelector(".underline");
  const dots = wrapper.querySelectorAll(".dot");
  const progressBar = wrapper.querySelector(".bar-fill");

  let activeIndex = 0;
  let autoplay = wrapper.dataset.autoplay === "true";
  let speed = parseInt(wrapper.dataset.speed) * 1000;
  let interval;

  function setActive(index) {
    tabs.forEach((tab, i) => {
      tab.classList.toggle("active", i === index);
      slides[i].classList.toggle("active", i === index);
    });
    dots.forEach((dot, i) => {
      dot.classList.toggle("active", i === index);
    });
    underline.style.left = `calc(${index} * (100% / ${tabs.length}))`;
    progressBar.style.width = "0%";
    setTimeout(() => {
      progressBar.style.transition = `width ${speed}ms linear`;
      progressBar.style.width = "100%";
    }, 10);
    activeIndex = index;
  }

  function handleDotClick(index) {
    setActive(index);
    resetAutoplay();
  }

  dots.forEach((dot, index) => {
    dot.addEventListener("click", () => handleDotClick(index));
  });

  tabs.forEach((tab, index) => {
    tab.addEventListener("click", () => {
      setActive(index);
      resetAutoplay();
    });
  });

  function startAutoplay() {
    if (!autoplay) return;
    interval = setInterval(() => {
      let next = (activeIndex + 1) % slides.length;
      setActive(next);
    }, speed);
    progressBar.style.transition = `width ${speed}ms linear`;
    progressBar.style.width = "100%";
  }

  function resetAutoplay() {
    if (interval) clearInterval(interval);
    progressBar.style.transition = "none";
    progressBar.style.width = "0%";
    startAutoplay();
  }

  startAutoplay();
});
</script>
