{% comment %}
  Custom section: Text Section | text-section.liquid
{% endcomment %}

<section
  id="text-section-{{ section.id }}"
  class="text-section"
  style="
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  "
>
  <div class="text-section__inner">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'caption' %}
          <p
            class="text-section__caption"
            id="{{ block.id }}"
            {{ block.shopify_attributes }}
            style="
              font-size: {{ block.settings.caption_font_size_desktop }}px;
              font-weight: {{ block.settings.font_weight }};
              margin-bottom: {{ block.settings.margin_bottom }}px;
              color: {{ block.settings.color }};
              text-transform: {{ block.settings.text_transform }};
              max-width: {{ block.settings.caption_max_width_desktop }}px;
              margin-left: auto;
              margin-right: auto;
              text-align: {{ block.settings.caption_text_align_desktop }};
            "
          >
            {{ block.settings.text }}
          </p>

        {% when 'heading' %}
          <h2
            class="text-section__heading"
            id="{{ block.id }}"
            {{ block.shopify_attributes }}
            style="
              font-size: {{ block.settings.heading_font_size_desktop }}px;
              font-weight: {{ block.settings.font_weight }};
              margin-bottom: {{ block.settings.margin_bottom }}px;
              color: {{ block.settings.color }};
              text-transform: {{ block.settings.text_transform }};
              max-width: {{ block.settings.heading_max_width_desktop }}px;
              margin-left: auto;
              margin-right: auto;
              text-align: {{ block.settings.heading_text_align_desktop }};
            "
          >
            {{ block.settings.text }}
          </h2>

        {% when 'paragraph' %}
          <p
            class="text-section__paragraph"
            id="{{ block.id }}"
            {{ block.shopify_attributes }}
            style="
              font-size: {{ block.settings.paragraph_font_size_desktop }}px;
              font-weight: {{ block.settings.font_weight }};
              margin-bottom: {{ block.settings.margin_bottom }}px;
              color: {{ block.settings.color }};
              text-transform: {{ block.settings.text_transform }};
              max-width: {{ block.settings.paragraph_max_width_desktop }}px;
              margin-left: auto;
              margin-right: auto;
              text-align: {{ block.settings.paragraph_text_align_desktop }};
            "
          >
            {{ block.settings.text }}
          </p>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% style %}
  .text-section {
    text-align: center;
  }

  .text-section__inner {
    margin: 0 auto;
    padding: 0 16px;
  }

  @media screen and (max-width: 767px) {
    #text-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    {% for block in section.blocks %}
      {% if block.type == 'caption' %}
        .text-section__caption#{{ block.id }} {
          font-size: {{ block.settings.caption_font_size_mobile }}px;
          max-width: {{ block.settings.caption_max_width_mobile }}px;
          text-align: {{ block.settings.caption_text_align_mobile }};
        }
      {% endif %}
      {% if block.type == 'heading' %}
        .text-section__heading#{{ block.id }} {
          font-size: {{ block.settings.heading_font_size_mobile }}px;
          max-width: {{ block.settings.heading_max_width_mobile }}px;
          text-align: {{ block.settings.heading_text_align_mobile }};
        }
      {% endif %}
      {% if block.type == 'paragraph' %}
        .text-section__paragraph#{{ block.id }} {
          font-size: {{ block.settings.paragraph_font_size_mobile }}px;
          max-width: {{ block.settings.paragraph_max_width_mobile }}px;
          text-align: {{ block.settings.paragraph_text_align_mobile }};
        }
      {% endif %}
    {% endfor %}
  }
{% endstyle %}

