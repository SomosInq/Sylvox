{% schema %}
{
  "name": "In The Box",
  "tag": "section",
  "class": "in-the-box-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "What's In The Box"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Here's everything you’ll receive with your order.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "Deck Pro 2.0"
    },
    {
      "type": "text",
      "id": "left_quantity",
      "label": "Left Quantity",
      "default": "× 1"
    },
    {
      "type": "range",
      "id": "left_image_width",
      "label": "Left Image Width (%)",
      "min": 10,
      "max": 100,
      "default": 100
    },
    {
      "type": "color",
      "id": "left_text_color",
      "label": "Left Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "left_text_size",
      "label": "Left Text Size (px)",
      "min": 10,
      "max": 40,
      "default": 18
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Box Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "item_image",
          "label": "Item Image"
        },
        {
          "type": "text",
          "id": "item_title",
          "label": "Item Title"
        },
        {
          "type": "text",
          "id": "item_quantity",
          "label": "Item Quantity"
        },
        {
          "type": "range",
          "id": "item_image_width",
          "label": "Image Width (%)",
          "min": 10,
          "max": 100,
          "default": 100
        },
        {
          "type": "color",
          "id": "item_text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "item_text_size",
          "label": "Text Size (px)",
          "min": 10,
          "max": 30,
          "default": 16
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "In The Box",
      "category": "Somos Custom"
    }
  ]
}
{% endschema %}

{% style %}

#shopify-section-{{ section.id }} {
  background-color: {{ section.settings.background_color }};
  {% if section.settings.background_image != blank %}
    background-image: url({{ section.settings.background_image | image_url }});
    background-size: cover;
    background-position: center;
  {% endif %}
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.in-the-box-heading {
  color: #3B3E40;
  font-size: 32px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin-bottom: 24px;
  text-align: center;
}

.in-the-box-description {
  font-size: 16px;
  text-align: center;
  color: #555;
  margin-bottom: 20px;
}

.in-the-box-button {
  text-align: center;
  margin-bottom: 40px;
}

.in-the-box-button .btn {
  background-color: #000;
  color: #fff;
  padding: 10px 24px;
  text-decoration: none;
  display: inline-block;
  border-radius: 4px;
}

.in-the-box-wrapper {
  display: block;
}

@media (min-width: 768px) {
  .in-the-box-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
}

.in-the-box-left,
.in-the-box-right {
  width: 100%;
}


@media (min-width: 768px) {
  .in-the-box-left {
    width: 23.42%;
  }

  .in-the-box-right {
    width: 66.66%;
  }
}

.in-the-box-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
}

@media (min-width: 768px) {
  .in-the-box-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}
@media (max-width: 767px) {
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }
  .in-the-box-section {
    padding-top: 20px;
    padding-bottom: 20px;
  }
  .in-the-box-grid,
  .in-the-box-left h2,
  .in-the-box-grid div {
    text-align: center !important;
  }
  .in-the-box-left {
    width: 100%;
    text-align: center;
  }
  .in-the-box-left > img {
    margin: auto;
  }
  .in-the-box-grid {
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
  }
}

.in-the-box-item img {
  aspect-ratio: 180 / 187;
  object-fit: contain;
  object-position: center;
  margin-bottom: 6px;
}
.in-the-box-item h3,
.in-the-box-left h2 {
  color: #3B3E40;
  font-size: 16px;
  font-weight: 300;
  line-height: normal;
  margin: 0 0 6px;
}
.in-the-box-item p,
.in-the-box-left p {
  color: #3B3E40;
  font-size: 14px;
  font-weight: 300;
  line-height: normal;
}
{% endstyle %}

<div class="in-the-box-section">
  <div class="page-width-container">

    {% if section.settings.section_title != blank %}
      <h2 class="in-the-box-heading">{{ section.settings.section_title }}</h2>
    {% endif %}

    {% if section.settings.section_description != blank %}
      <div class="in-the-box-description">{{ section.settings.section_description }}</div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <div class="in-the-box-button">
        <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
      </div>
    {% endif %}

    <div class="in-the-box-wrapper">
      <!-- Left Column -->
      <div class="in-the-box-left">
        {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | image_url }}" alt="Main Item">
        {% endif %}
        <h2>
          {{ section.settings.left_title }}
        </h2>
        <p>
          {{ section.settings.left_quantity }}
        </p>
      </div>

      <!-- Right Column -->
      <div class="in-the-box-right">
        <div class="in-the-box-grid">
          {% for block in section.blocks %}
            <div class="in-the-box-item">
              {% if block.settings.item_image %}
                <img src="{{ block.settings.item_image | image_url }}" style="width: {{ block.settings.item_image_width }}%;" alt="{{ block.settings.item_title }}">
              {% endif %}
              <h3>
                {{ block.settings.item_title }}
              </h3>
              <p>
                {{ block.settings.item_quantity }}
              </p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

  </div>
</div>
