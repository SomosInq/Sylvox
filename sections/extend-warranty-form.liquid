      {
        "id": "product_serial_number_tooltip_subtitle_one",
        "type": "textarea",
        "label": "Product Serial Number Tooltip Subtitle One",
        "default": "1. On the product warranty card: as shown in the figure"
      },
       {
          "type": "image_picker",
          "id": "sample_img_one",
          "label": "Sample Image One"
        },
      {
        "id": "product_serial_number_tooltip_subtitle_two",
        "type": "textarea",
        "label": "Product Serial Number Tooltip Subtitle Two",
        "default": "2. Product back back tag nameplate: as shown in the figure"
      },
      {
          "type": "image_picker",
          "id": "sample_img_two",
          "label": "Sample Image Two"
        },
       {
        "id": "order_sreenshot_title",
        "type": "text",
        "label": "Order Sreenshot Title",
        "default": "Order Screenshot"
      },
      {
        "id": "remark_title",
        "type": "text",
        "label": "Remark Title",
        "default": "Remark"
      },
      {
        "id": "agree_check_box_one",
        "type": "text",
        "label": "Agree CheckBox One",
        "default": "I agree to Sylvox's"
