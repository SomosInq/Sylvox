      },
      {
        "id": "country_label",
        "type": "text",
        "label": "Country Region Label",
        "default": "Country/Region"
      },
      {
        "id": "country_tooltip",
        "type": "textarea",
        "label": "Country Region tooltip",
        "default": "You can extend your warranty through our website. By activating your membership, you'll get an exclusive coupon which applies to all products on this site. Please note that orders can only be shipped to areas covered on that site."
      },
      {
        "id": "contact_information_title",
        "type": "text",
        "label": "Contact Information Title",
        "default": "Contact Information"
      },
      {
        "id": "first_name_label",
        "type": "text",
        "label": "First Name Label",
