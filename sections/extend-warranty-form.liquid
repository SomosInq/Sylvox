      },
      {
        "id": "privacy_text",
        "type": "text",
        "label": "Privacy Policy Text",
        "default": "Privacy Policy"
      },
      {
        "type": "url",
        "id": "privacy_link",
        "label": "Privacy Policy Link",
        "info": "t:labels.optional"
      },
      {
        "id": "agree_check_box_two",
        "type": "text",
        "label": "Agree CheckBox Two",
        "default": "Subscribe to Sylvox's latest news and offers. You can unsubscribe at anytime"
      },
      {
        "type": "url",
        "id": "submit_success_url",
        "label": "Submit of Success Link",
        "info": "t:labels.optional"
      },
    ],
     "presets": [
      {
        "name": "Extend Warranty Form"
      }
     ]
  }
