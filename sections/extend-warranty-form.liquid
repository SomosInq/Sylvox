        "type": "text",
        "label": "Email Label",
        "default": "Email"
      },
      {
        "id": "cell_phone_label",
        "type": "text",
        "label": "Cell Phone Label",
        "default": "Cell Phone"
      },
      {
        "id": "order_details_title",
        "type": "text",
        "label": "Order Details Title",
        "default": "Order Details"
      },
      {
        "id": "order_id_label",
        "type": "text",
        "label": "Order ID Title",
        "default": "Order ID"
      },
      {
        "id": "order_id_tooltip",
        "type": "textarea",
        "label": "Order ID Tooltip",
        "default": "You can find you order ID in the order history of the account, through which your purchase was made."
      },
      {
        "id": "product_serial_number_label",
        "type": "text",
        "label": "Product Serial Number Label",
        "default": "Product Serial Number"
      },
      {
        "id": "product_serial_number_tooltip_title",
        "type": "text",
        "label": "Product Serial Number Tooltip Title",
        "default": "The device serial can be found in these two places"
