{% schema %}
  {
    "name": "Extend Warranty Form",
    "settings": [
      {
        "id": "purchase_channel_title",
        "type": "text",
        "label": "Purchase Channel Title",
        "default": "Select your purchase channel"
      },
      {
        "id": "purchase_channel_label",
