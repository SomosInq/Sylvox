      "type": "text",
      "id": "paragraph_2",
      "label": "Paragraph Line 2",
      "default": "By referring customers to Vantrue.com."
    },
    {
      "type": "text",
      "id": "paragraph_3",
      "label": "Paragraph Line 3",
      "default": "You earn minimum 5% to 8% commission on all referred sales."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
