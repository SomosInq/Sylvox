      "default": "Over $300.00"
    },
    {
      "type": "image_picker",
      "id": "feature_3_image",
      "label": "Feature 3 Image"
    },
    {
      "type": "text",
      "id": "feature_3_desc",
      "label": "Feature 3 Description",
      "default": "Exchange Service"
    },
    {
      "type": "image_picker",
      "id": "feature_4_image",
      "label": "Feature 4 Image"
    },
    {
      "type": "text",
      "id": "feature_4_desc",
      "label": "Feature 4 Description",
      "default": "Warranty"
    }
  ],
  "presets": [
    {
      "name": "Promo With Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}
