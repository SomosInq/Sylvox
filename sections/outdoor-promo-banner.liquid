

<div class="outdoor-promo-banner">
  {% if section.settings.background_image_desktop %}
    <img class="background-image desktop-image" src="{{ section.settings.background_image_desktop | img_url: 'master' }}" alt="Outdoor TV Promotion">
  {% endif %}
  
  {% if section.settings.background_image_mobile %}
    <img class="background-image mobile-image" src="{{ section.settings.background_image_mobile | img_url: 'master' }}" alt="Outdoor TV Promotion">
  {% endif %}
  
  <div class="text-content" style="left: {{ section.settings.text_block_position_x }}%; top: {{ section.settings.text_block_position_y }}%;">
    <h1 class="heading">
      <span class="heading-line1">{{ section.settings.heading_line1 }}</span>
      <span class="heading-line2">{{ section.settings.heading_line2 }}</span>
    </h1>
    
    <div class="subheading">
      <span class="subheading-prefix">{{ section.settings.subheading_prefix }}</span>
      <span class="discount-amount" style="background-color: {{ section.settings.discount_bg_color }}; color: {{ section.settings.discount_text_color }};">
        {{ section.settings.discount_amount }}
      </span> 
      <span class="subheading-suffix">{{ section.settings.subheading_suffix }}</span>
    </div>
    
    <p class="description">
      {{ section.settings.description }}
    </p>
    
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="cta-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
  .outdoor-promo-banner {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 43.25%; /* 16:9 Aspect Ratio */
    overflow: hidden;
  }
  
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .mobile-image {
    display: none;
  }
  
  .text-content {
    position: absolute;
    max-width: 50%;
    transform: translate(-0%, -50%);
  }
  
  .heading {
    margin: 0 0 15px 0;
    line-height: 1.1;
  }
  
  .heading-line1, .heading-line2 {
    display: block;
    font-weight: 600;
  }
  #shopify-section-{{ section.id}} .heading-line1 {
   
    background: {{ section.settings.heading_color_desktop_1 }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;
    }
    
  #shopify-section-{{ section.id}}   .heading-line2 {
   
       background: {{ section.settings.heading_color_desktop_2 }};-webkit-background-clip: text;-webkit-text-fill-color: transparent;
  
    }
  /* Desktop Styles */
  @media screen and (min-width: 769px) {
 #shopify-section-{{ section.id}}    .heading-line1 {
      font-size: {{ section.settings.heading_size_desktop_1 }}px;
   
    }
    
 #shopify-section-{{ section.id}}    .heading-line2 {
      font-size: {{ section.settings.heading_size_desktop_2 }}px;
    
    }
    
    .subheading-prefix {
      font-size: {{ section.settings.subheading_prefix_size_desktop }}px;
      color: {{ section.settings.subheading_prefix_color_desktop }};
    }
    
    .discount-amount {
      font-size: {{ section.settings.discount_size_desktop }}px;
    }
    
    .subheading-suffix {
      font-size: {{ section.settings.subheading_suffix_size_desktop }}px;
      color: {{ section.settings.subheading_suffix_color_desktop }};
    }
    
    .description {
      font-size: {{ section.settings.description_size_desktop }}px;
      color: {{ section.settings.description_color_desktop }};
    }
    
    .cta-button {
      font-size: {{ section.settings.button_size_desktop }}px;
    }
  }
  
  .subheading {
    margin: 0 0 10px 0;
    font-weight: 500;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .discount-amount {
    padding: 4px 12px;
    border-radius: 20px;
    font-weight: 600;
    display: inline-block;
  }
  
  .description {
    margin: 0 0 25px 0;
    line-height: 1.4;
  }
  
  .cta-button {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }
  
  .cta-button:hover {
    opacity: 0.9;
  }
  
  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .desktop-image {
      display: none;
    }
    .outdoor-promo-banner {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 150%;
    overflow: hidden;
}
    .mobile-image {
      display: block;
    }
    
    .text-content {
      max-width: 90%;
      left: 50% !important;
      top: 30% !important;
      transform: translate(-50%, -50%);
      text-align: center;
    }
    
  #shopify-section-{{ section.id}}   .heading-line1 {
      font-size: {{ section.settings.heading_size_mobile_1 }}px;
     
    }
    
  #shopify-section-{{ section.id}}   .heading-line2 {
      font-size: {{ section.settings.heading_size_mobile_2 }}px;
   
    }
    
    .subheading-prefix {
      font-size: {{ section.settings.subheading_prefix_size_mobile }}px;
      color: {{ section.settings.subheading_prefix_color_mobile }};
    }
    
    .discount-amount {
      font-size: {{ section.settings.discount_size_mobile }}px;
    }
    
    .subheading-suffix {
      font-size: {{ section.settings.subheading_suffix_size_mobile }}px;
      color: {{ section.settings.subheading_suffix_color_mobile }};
    }
    
    .description {
      font-size: {{ section.settings.description_size_mobile }}px;
      color: {{ section.settings.description_color_mobile }};
    }
    
    .cta-button {
      font-size: {{ section.settings.button_size_mobile }}px;
    }
    
    .subheading {
      justify-content: center;
    }
  }
</style>
