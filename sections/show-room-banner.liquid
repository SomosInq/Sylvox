{%- render 'section-show-room-banner' -%}

{% schema %}
{
  "name": "Show Room Banner",
  "class": "index-section--flush",
  "settings": [
    {
      "id": "banner_title",
      "type": "text",
      "label": "t:labels.heading",
      "default": "Where to Experience Sylvox Displays"
    },
    {
      "type": "color",
      "id": "banner_title_color",
      "label": "Title text Color",
      "default": "#fff"
    },
    {
      "id": "banner_sub_title",
      "type": "textarea",
      "label": "Content Text",
      "default": "Step into the world of Sylvox.See our Outdoor TVs up close and experience brilliant outdoor viewing like never befo"
    },
    {
      "type": "color",
      "id": "banner_sub_title_color",
      "label": "SubTitle text Color",
      "default": "#efefef"
    },
    {
      "type": "number",
      "id": "text_block_width",
      "label": "Text Block Width",
      "default": 750,
    },
     {
      "type": "number",
      "id": "text_block_left_margin",
      "label": "Text Block Left Margin(%)",
      "default": 17,
    },
    {
      "type": "range",
      "id": "height",
      "label": "t:labels.section_height",
      "default": 400,
      "min": 400,
      "max": 750,
      "step": 50,
      "unit": "px"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:labels.image",
      "info": "Show Room Background Image"
    },
  ],
  "presets": [
    {
      "name": "Show Room Banner"
    }
  ],
}
{% endschema %}
