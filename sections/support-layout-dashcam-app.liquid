  "settings": [
    {
      "type": "image_picker",
      "id": "banner_wordmark",
      "label": "Banner Wordmark Logo (Black)"
    },
    {
      "type": "image_picker",
      "id": "banner_logo",
      "label": "Orange V Logo"
    },
    {
