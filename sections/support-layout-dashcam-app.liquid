    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "GPS Track Image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Video Editing Image"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Live Preview Image"
    },
    {
      "type": "image_picker",
      "id": "qr_ios",
      "label": "QR Code iOS"
    },
    {
      "type": "image_picker",
      "id": "badge_ios",
      "label": "App Store Badge"
    },
    {
      "type": "url",
      "id": "link_ios",
