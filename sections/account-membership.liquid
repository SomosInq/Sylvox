<div class="account-wrapper section_content_width_{{ section.settings.section_content_width }}">
  <aside class="account-sidebar">
    {% render 'account-sidebar' %}
  </aside>

  <main class="account-content section_width_{{ section.settings.section_width }}">

    <div class="membership-section">
  <div class="membership-header">
    <div class="membership-header__text">
      <strong>{{ section.settings.membership_title }}</strong><br>
      {{ section.settings.membership_subtitle }}
    </div>
    <div class="membership-header__points">
      {{ section.settings.points_balance }}<br><small>{{ section.settings.points_label }}</small>
    </div>
  </div>

  <div class="membership-tabs" role="tablist">
    <div class="membership-tab active" data-tab="earn">{{ section.settings.tab_earn_label }}</div>
    <div class="membership-tab" data-tab="claim">{{ section.settings.tab_claim_label }}</div>
    <div class="membership-tab" data-tab="activity">{{ section.settings.tab_activity_label }}</div>
  </div>

  <div class="membership-tab-content active" data-content="earn">
    <div class="membership-grid">
      {% for block in section.blocks %}
        {% if block.type == 'earn' %}
        <div class="membership-item">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
          {% endif %}
          <div><strong>{{ block.settings.title }}</strong></div>
          <div>{{ block.settings.subtitle }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="membership-tab-content" data-content="claim">
    <div class="membership-grid">
      {% for block in section.blocks %}
        {% if block.type == 'claim' %}
        <div class="membership-item">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
          {% endif %}
          <div><strong>{{ block.settings.title }}</strong></div>
          <div>{{ block.settings.subtitle }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="membership-tab-content" data-content="activity">
    <div class="membership-grid">
      {% for block in section.blocks %}
        {% if block.type == 'activity' %}
        <div class="membership-item">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
          {% endif %}
          <div><strong>{{ block.settings.title }}</strong></div>
          <div>{{ block.settings.subtitle }}</div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.querySelectorAll('.membership-tab').forEach(tab => {
  tab.addEventListener('click', () => {
    document.querySelectorAll('.membership-tab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.membership-tab-content').forEach(c => c.classList.remove('active'));

    tab.classList.add('active');
    document.querySelector(`.membership-tab-content[data-content="${tab.dataset.tab}"]`).classList.add('active');
  });
});
</script>

