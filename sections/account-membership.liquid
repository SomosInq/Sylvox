  </main>
</div>

<style>
  .account-wrapper {
    display: flex;
    gap: 40px;
    padding: 40px;
    align-items: flex-start;
  }
  .account-sidebar {
    width: 220px;
    flex-shrink: 0;
  }
  .account-content {
    flex: 1;
  }

  .membership-section {
  padding: 40px 20px;
}

.membership-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #1f3e36;
  color: white;
  border-radius: 8px;
  padding: 24px;
  margin-bottom: 40px;
}

.membership-header__text {
  flex: 1;
}

.membership-header__points {
  font-size: 24px;
  font-weight: bold;
  text-align: right;
}

.membership-tabs {
  display: flex;
  gap: 24px;
  margin-bottom: 24px;
  border-bottom: 2px solid #eee;
}

.membership-tab {
  padding: 10px 0;
  cursor: pointer;
  border-bottom: 2px solid transparent;
}

.membership-tab.active {
  border-color: #1f3e36;
  font-weight: 600;
  color: #1f3e36;
}

.membership-tab-content {
  display: none;
}

.membership-tab-content.active {
  display: block;
}

.membership-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 24px;
}

.membership-item {
  background: #f9f9f9;
  padding: 24px;
  border-radius: 8px;
  text-align: center;
}

.membership-item img {
  max-width: 48px;
  margin-bottom: 16px;
}
</style>

