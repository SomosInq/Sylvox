}

.feature-media-highlight .bottom-cta-text {
  width: 613px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 20px;
  margin-right: 38px;
  text-align: left;
}

.feature-media-highlight .bottom-cta h2 {
