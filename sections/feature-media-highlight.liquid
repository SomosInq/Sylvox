{% schema %}
    {
      "name": "Feature Media Highlight",
      "tag": "section",
      "class": "feature-media-highlight-section",
      "settings": [
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow Text",
          "default": "Faster Processing, Seamless Connectivity, and Smarter Features"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Main Heading",
          "default": "Quad-Core CPU: Power Meets Speed"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Description",
          "default": "The E360 Aceâ€™s quad-core processor ensures lag free performance, while 5GHz WiFi and optional LTE support keep you connected in real time. From cloud uploads to instant access via the app, your footage is always at your fingertips."
        },
        {
          "type": "image_picker",
          "id": "media",
          "label": "Media Image - Desktop"
        },
        {
          "type": "image_picker",
          "id": "media_mobile",
          "label": "Media Image - Mobile"
        },
        {
          "type": "image_picker",
          "id": "background_desktop",
          "label": "Background Image - Desktop"
        },
        {
          "type": "image_picker",
          "id": "background_mobile",
          "label": "Background Image - Mobile"
        },
        {
          "type": "text",
          "id": "tag_1",
          "label": "Left Tag",
          "default": "LTE Compatibility"
        },
        {
          "type": "text",
          "id": "tag_2",
          "label": "Right Tag",
          "default": "5GHz WiFi & Free App"
        },
        {
          "type": "text",
          "id": "bottom_heading",
          "label": "Bottom Heading",
          "default": "Cloud Access & Remote Alerts"
        },
        {
          "type": "textarea",
          "id": "bottom_description",
          "label": "Bottom Description",
          "default": "Stay connected with an optional 4G LTE module, enabling cloud storage, real-time notifications, and GPS tracking."
        },
        {
          "type": "text",
          "id": "bottom_cta_heading",
          "label": "Second Section Heading",
          "default": "Advanced OTA Upgrade"
        },
        {
          "type": "textarea",
          "id": "bottom_cta_description",
          "label": "Second Section Description",
          "default": "Over-the-air updates keep your E360 Ace optimized with the latest features and improvements."
        },
        {
          "type": "text",
          "id": "button_label_1",
          "label": "Button 1 Label",
          "default": "APPLE STORE D/L"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Button 2 Label",
          "default": "GOOGLE PLAY D/L"
        }
      ],
      "presets": [
        {
          "name": "Feature Media Highlight",
            "category": "Custom"
        }
      ]
    }
    {% endschema %}
    
  <div class="feature-media-highlight page-width">
    <div class="top-content">
      <div class="top-text">
        <p class="eyebrow">{{ section.settings.eyebrow }}</p>
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <p class="subtext">{{ section.settings.subtext }}</p>
      </div>
    </div>
    
      <div class="media-block">
        {% if section.settings.media %}
          <div class="media-image">
            <picture>
              <source media="(max-width: 767px)" srcset="{{ section.settings.media_mobile | image_url: width: 1000 }}">
              <img src="{{ section.settings.media | image_url: width: 1600 }}" alt="" loading="lazy">
            </picture>
          </div>
        {% else %}
          <div class="media-placeholder"></div>
        {% endif %}
        <div class="media-tags">
          <span class="tag left">{{ section.settings.tag_1 }}</span>
          <span class="tag right">{{ section.settings.tag_2 }}</span>
        </div>
        <div class="media-description">
          <h3>{{ section.settings.bottom_heading }}</h3>
          <p>{{ section.settings.bottom_description }}</p>
        </div>
      </div>
    
      <div class="bottom-cta">
        <div class="bottom-cta-text">
          <h2>{{ section.settings.bottom_cta_heading }}</h2>
          <p>{{ section.settings.bottom_cta_description }}</p>
        </div>
        <div class="cta-buttons">
          <a href="#" class="cta">{{ section.settings.button_label_1 }}<span class="cta-icon">{{ 'arrow-bottom-left-small.svg' | inline_asset_content }}</span></a>
          <a href="#" class="cta">{{ section.settings.button_label_2 }}<span class="cta-icon">{{ 'arrow-bottom-left-small.svg' | inline_asset_content }}</span></a>
        </div>
      </div>
    </div>
    
<style>
.feature-media-highlight-section {
  color: #f5f5f5;
  padding: 0;
  text-align: center;
  background-image: url({{ section.settings.background_desktop | image_url: width: 2000 }});
  background-size: cover;
  background-position: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

@media screen and (max-width: 767px) {
  .feature-media-highlight-section {
    background-image: url({{ section.settings.background_mobile | image_url: width: 1000 }});
  }
}

