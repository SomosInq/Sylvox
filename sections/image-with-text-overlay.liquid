{%- unless section.settings.full_width -%}
  {%- render 'section-spacing-collapsing' -%}
{%- endunless -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.full_width -%}
      --section-outer-spacing-block: 0;
    {%- endif -%}
    --content-over-media-overlay: {{ section.settings.overlay_color.rgb }} / {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    {%- if section.settings.allow_transparent_header -%}
      margin-block-start: calc(-1 * var(--header-height) * var(--section-is-first));
    {%- endif -%}
  }
</style>

<div id="shopify-section-{{ section.id }}" class="{% if section.settings.full_width %}w-full{% else %}max-w-7xl mx-auto px-4{% endif %} relative overflow-hidden">
  <div class="relative h-full">
    {% if section.settings.image != blank %}
      <div class="absolute inset-0 z-0">
        <picture>
          {% if section.settings.mobile_image != blank %}
            <source
              media="(max-width: 699px)"
              srcset="{{ section.settings.mobile_image | image_url: width: 1200 }}"
              width="{{ section.settings.mobile_image.width }}"
              height="{{ section.settings.mobile_image.height }}">
          {% endif %}
          {{ section.settings.image | image_url: width: 3200 | image_tag: class: "w-full h-full object-cover", loading: "lazy" }}
        </picture>
        <div class="absolute inset-0" style="background-color: rgba({{ section.settings.overlay_color.rgb }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }});"></div>
      </div>
    {% endif %}

    <div class="relative z-10 grid h-[600px] w-full">
      <div class="{{ section.settings.mobile_text_position }} {{ section.settings.desktop_text_position }} p-6 text-white max-w-2xl mx-auto">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {% when 'subheading' %}
              {% if block.settings.text != blank %}
                <p class="text-sm font-semibold tracking-wider uppercase mb-2" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
              {% endif %}
            {% when 'heading' %}
              {% if block.settings.text != blank %}
                <h2 class="text-4xl font-bold leading-tight mb-4 {{ block.settings.heading_tag }}" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </h2>
              {% endif %}
            {% when 'richtext' %}
              {% if block.settings.content != blank %}
                <div class="mb-4" {{ block.shopify_attributes }}>
                  {{ block.settings.content }}
                </div>
              {% endif %}
            {% when 'button' %}
              {% if block.settings.text != blank %}
                {% capture button_classes %}
                  inline-block px-6 py-3 mr-4 rounded
                  {% if block.settings.style == 'fill' or block.settings.style == blank %}
                    bg-white text-black
                  {% else %}
                    border border-white text-white
                  {% endif %}
                {% endcapture %}
                <a href="{{ block.settings.url }}" class="{{ button_classes | strip }}" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </a>
              {% endif %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with Text Overlay",
  "class": "shopify-section--image-with-text-overlay",
  "tag": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "allow_transparent_header",
      "label": "Allow transparent header",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "select",
      "id": "mobile_text_position",
      "label": "Mobile content position",
      "options": [
        { "value": "place-self-start text-left", "label": "Top Left" },
        { "value": "place-self-start text-center", "label": "Top Center" },
        { "value": "place-self-start text-right", "label": "Top Right" },
        { "value": "place-self-center text-left", "label": "Middle Left" },
        { "value": "place-self-center text-center", "label": "Middle Center" },
        { "value": "place-self-center text-right", "label": "Middle Right" },
        { "value": "place-self-end text-left", "label": "Bottom Left" },
        { "value": "place-self-end text-center", "label": "Bottom Center" },
        { "value": "place-self-end text-right", "label": "Bottom Right" }
      ],
      "default": "place-self-center text-center"
    },
    {
      "type": "select",
      "id": "desktop_text_position",
      "label": "Desktop content position",
      "options": [
        { "value": "sm:place-self-start sm:text-left", "label": "Top Left" },
        { "value": "sm:place-self-start sm:text-center", "label": "Top Center" },
        { "value": "sm:place-self-start sm:text-right", "label": "Top Right" },
        { "value": "sm:place-self-center sm:text-left", "label": "Middle Left" },
        { "value": "sm:place-self-center sm:text-center", "label": "Middle Center" },
        { "value": "sm:place-self-center sm:text-right", "label": "Middle Right" },
        { "value": "sm:place-self-end sm:text-left", "label": "Bottom Left" },
        { "value": "sm:place-self-end sm:text-center", "label": "Bottom Center" },
        { "value": "sm:place-self-end sm:text-right", "label": "Bottom Right" }
      ],
      "default": "sm:place-self-center sm:text-center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        { "type": "text", "id": "text", "label": "Text", "default": "Subheading" }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        { "type": "text", "id": "text", "label": "Text", "default": "Main headline" },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Tag",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "richtext",
      "name": "Paragraph",
      "settings": [
        { "type": "richtext", "id": "content", "label": "Content", "default": "<p>Description goes here.</p>" }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        { "type": "text", "id": "text", "label": "Button Text", "default": "Click Me" },
        { "type": "url", "id": "url", "label": "Link" },
        {
          "type": "select",
          "id": "style",
          "label": "Style",
          "options": [
            { "value": "fill", "label": "Filled" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "fill"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Text Overlay",
      "category": "Custom",
      "blocks": [
        { "type": "subheading", "settings": { "text": "Outdoor Entertainment Perfected" } },
        { "type": "heading", "settings": { "text": "Sylvox Deck Pro 2.0", "heading_tag": "h1" } },
        { "type": "richtext", "settings": { "content": "<p>A next-level outdoor TV designed to perform in sunlight, rain, or snow.</p>" } },
        { "type": "button", "settings": { "text": "Watch Video", "url": "#" } },
        { "type": "button", "settings": { "text": "Learn More", "url": "#", "style": "outline" } }
      ]
    }
  ]
}
{% endschema %}
