{% comment %}
  Custom section: Image and Text | image-and-text.liquid
{% endcomment %}

<div id="{{ section.id }}" class="image-and-text{% if section.settings.swap_order %} image-and-text--reversed{% endif %}">
  <div class="image-and-text__container">
    <div class="image-and-text__text">
      <h2 class="image-and-text__heading">{{ section.settings.heading }}</h2>
      <div class="image-and-text__body">{{ section.settings.text }}</div>
    </div>
    <div class="image-and-text__image-wrapper">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.image.alt | escape }}" class="image-and-text__image" loading="lazy">
      {% endif %}
    </div>
  </div>
</div>

{% style %}
  #{{ section.id }} {
    padding: 80px 0;
  }

  .image-and-text__container {
    max-width: 1608px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 80px;
    flex-wrap: wrap;
  }

  .image-and-text__heading {
    font-size: 40px;
    line-height: 1.2;
    font-weight: 600;
    color: #2e2e2e;
    margin-bottom: 32px;
  }

  .image-and-text__body {
    font-size: 18px;
    line-height: 1.7;
    color: #4a4a4a;
    max-width: 580px;
  }

  .image-and-text__image-wrapper {
    flex: 1 1 50%;
    max-width: 760px;
  }

  .image-and-text__image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0;
  }

  .image-and-text__text {
    flex: 1 1 40%;
    max-width: 620px;
  }

  .image-and-text--reversed .image-and-text__container {
    flex-direction: row-reverse;
  }

  @media screen and (max-width: 1024px) {
    .image-and-text__container {
      flex-direction: column;
      gap: 40px;
      text-align: center;
    }

    .image-and-text--reversed .image-and-text__container {
      flex-direction: column;
    }

    .image-and-text__text,
    .image-and-text__image-wrapper {
      max-width: 100%;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Image and Text",
  "tag": "section",
  "class": "section image-and-text-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "swap_order",
      "label": "Swap image and text sides",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Design State of Mind:"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We understand that design isn’t just about looks it’s about purpose...</p>"
    }
  ],
  "presets": [
    {
      "name": "Image and Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
