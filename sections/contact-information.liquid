{% comment %}
  Custom section: Contact Information | contact-information.liquid
{% endcomment %}

<div class="contact-info-section" id="{{ section.id }}">
  <div class="contact-info-wrapper">
    <h2 class="contact-info__title">Contact Information</h2>
    <p class="contact-info__intro">
      We love to hear from you on our customer service, merchandise, website or any topics you want to share with us.<br>
      Your comments and suggestions will be appreciated.
    </p>

    <div class="contact-info__cards">
      <div class="contact-info__card">
        <h3>After service</h3>
        <p>Email: <a href="mailto:support@vantrue.net">support@vantrue.net</a></p>
        <p>Phone: <a href="tel:510-666-4086">510-666-4086</a></p>
        <p class="contact-info__card-link">Write Us a Message <span>&rsaquo;</span></p>
      </div>
      <div class="contact-info__card">
        <h3>Media Cooperation</h3>
        <p>Co-Brand & Marketing Cooperation</p>
        <p>Email: <a href="mailto:business@vantrue.net">business@vantrue.net</a></p>
      </div>
      <div class="contact-info__card">
        <h3>Working Hours</h3>
        <p>Monday - Friday</p>
        <p>8:00 AM - 12:00 PM PDT Time</p>
      </div>
    </div>

    <div class="contact-info__form-section">
      <h3 class="form-title">Write Us a Message</h3>
      <p class="form-text">
        For B2B, Media, KOL, Affiliate Marketing Cooperation Submissions;<br>
        In order to provide you a better service and speed up responding time, Please select the corresponding email address to contact and do provide the relevant information before submitting an inquiry.
      </p>
      <p class="form-response">We aim to respond to all inquiries within 24 hours.</p>

      <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="contact-info__form" id="contact_form">
        <div class="form-row">
          <input type="text" name="contact[first_name]" placeholder="First Name*" required>
          <input type="text" name="contact[last_name]" placeholder="Last Name*" required>
          <input type="email" name="contact[email]" placeholder="Your Email*" required>
          <input type="tel" name="contact[phone]" placeholder="Your Phone Number">
        </div>
        <textarea name="contact[body]" placeholder="Your Message*" required></textarea>
        <button type="submit" class="contact-info__submit">
          <span>Submit</span>
          <svg class="arrow" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
            <path d="M2 7H12" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 3L12 7L8 11" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>
    </div>

    <div class="contact-info__addresses">
      <h3>Company Address</h3>
      <div class="address-grid">
        <div class="address-item">
          <strong>Sanjiang innovations(Hongkong) Co., Ltd</strong>
          <span>SHOP 185 G/F HANG WAI IND CTR NO 6 KIN TAI ST TUEN MUN</span>
        </div>
        <div class="separator"></div>
        <div class="address-item">
          <strong>SANJIANG INNOVATIONS INC</strong>
          <span>6547 N Academy Blvd #2266, Colorado Springs, CO, 80918</span>
        </div>
        <div class="separator"></div>
        <div class="address-item">
          <strong>Shenzhen Sanjiang E-Commerce Co., Ltd</strong>
          <span>24th Floor, Building 1, Jinluan International Building</span>
        </div>
      </div>
    </div>
  </div>

  {% style %}
  @import url('https://fonts.googleapis.com/css2?family=Questrial&family=Roboto&display=swap');

  .contact-info-wrapper {
    max-width: 1608px;
    margin: 0 auto;
    padding: 80px 20px 78px;
    font-family: 'Roboto', sans-serif;
    color: #000;
  }

  .contact-info__title {
    font-family: 'Questrial', sans-serif;
    font-size: 56px;
    font-weight: 400;
    margin-bottom: 20px;
    color: #0D0D0D;
  }

  .contact-info__intro {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    margin-bottom: 40px;
    color: rgba(0, 0, 0, 0.60);
  }

  .contact-info__cards {
    display: flex;
    gap: 20px;
    margin-bottom: 80px;
  }

  .contact-info__card {
    background: #FAFAFA;
    padding: 40px 32px;
    border-radius: 5px;
    width: 450px;
    box-sizing: border-box;
  }

  .contact-info__card h3 {
    font-family: 'Questrial', sans-serif;
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 20px;
    color: #0D0D0D;
  }

  .contact-info__card p {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    margin-bottom: 12px;
    color: rgba(0, 0, 0, 0.60);
  }

  .contact-info__card a {
    text-decoration: underline;
    color: #000;
    opacity: 0.6;
  }

  .contact-info__card-link {
    font-family: 'Questrial', sans-serif;
    font-size: 18px;
    font-weight: 400;
    margin-top: 12px;
    cursor: pointer;
    color: #1D1D1B;
  }

  .contact-info__form-section {
    border-top: 1px solid #C6C6C6;
    padding-top: 80px;
    margin-bottom: 40px;
  }

  .form-title {
    font-family: 'Questrial', sans-serif;
    font-size: 32px;
    font-weight: 400;
    margin-bottom: 20px;
    color: #0D0D0D;
  }

  .form-text,
  .form-response {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    margin-bottom: 20px;
    color: #1D1D1B;
  }

  .form-response {
    font-weight: 400;
  }

  .contact-info__form {
    max-width: 100%;
  }

  .form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .form-row input, .form-row input[type="email"] {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    padding: 20px 24px;
    border: 1px solid #636363;
    border-radius: 10px;
    width: 336px;
    box-sizing: border-box;
    outline: 1px solid #636363;
    outline-offset: 0;
    transition: outline-offset 0.3s ease;
    color: #1D1D1B;
  }

  .form-row input::placeholder {
    color: #C6C6C6;
    opacity: 1;
  }

  .form-row input:focus {
    outline: 1px solid #636363;
    outline-offset: 0;
  }

  textarea {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    width: 100%;
    max-width: 100%;
    min-height: 200px;
    padding: 20px 24px;
    border: 1px solid #636363;
    border-radius: 10px;
    resize: vertical;
    outline: 1px solid #636363;
    outline-offset: 0;
    transition: outline-offset 0.3s ease;
    margin-bottom: 32px;
    box-sizing: border-box;
    color: #1D1D1B;
  }

  textarea::placeholder {
    color: #C6C6C6;
    opacity: 1;
  }

  textarea:focus {
    outline: 1px solid #636363;
    outline-offset: 0;
  }

  .contact-info__submit {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: #000;
    border-radius: 30px;
    padding: 16px 32px;
    border: none;
    cursor: pointer;
    font-family: 'Roboto', sans-serif;
    font-size: 18px;
    font-weight: 400;
    color: #fff;
    user-select: none;
    transition: background 0.2s;
  }

  .contact-info__submit span {
    display: inline-block;
    color: #FFFFFF;
    font-family: 'Questrial', sans-serif;
    font-size: 18px;
    font-weight: 400;
  }

  .contact-info__submit .arrow {
    display: inline-block;
    transform: rotate(-45deg);
    stroke: #fff;
    color: #fff;
    fill: none;
  }

  .contact-info__addresses {
    max-width: 1608px;
  }

  .contact-info__addresses h3 {
    font-family: 'Questrial', sans-serif;
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 40px;
    color: #0D0D0D;
  }

  .address-grid {
    background-color: #FAFAFA;
    border-radius: 5px;
    display: inline-flex;
    gap: 40px;
    flex-wrap: wrap;
    align-items: flex-start;
    width: 100%;
  }

  .address-item {
    display: flex;
    flex-direction: column;
    max-width: 450px;
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    color: #000;
    padding: 24px 20px;
    box-sizing: border-box;
  }

  .address-item strong {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 12px;
    color: #1D1D1B;
  }

  .address-item span {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.60);
  }

  .separator {
    width: 1px;
    background: #C6C6C6;
    height: auto;
    min-height: 80px;
    align-self: center;
  }

  @media (max-width: 1024px) {
    .contact-info__cards {
      flex-wrap: wrap;
      justify-content: center;
    }

    .contact-info__card {
      width: 100%;
      max-width: 450px;
    }

    .form-row input {
      width: 100%;
      max-width: 336px;
    }

    .address-grid {
      flex-direction: column;
      gap: 20px;
    }

    .separator {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .contact-info-wrapper {
      padding: 40px 0;
      width: 342px;
      margin: 0 auto;
    }
    .contact-info__title {
      font-size: 24px;
      color: #2C2C2C;
      width: 219px;
    }
    .contact-info__intro {
      font-size: 14px;
      color: #1A1A1A;
      height: 64px;
    }
    .contact-info__cards {
      flex-direction: column;
      gap: 20px;
      width: 342px;
      margin: 0 auto 40px auto;
    }
    .contact-info__card {
      width: 100%;
      padding: 32px 20px;
      box-sizing: border-box;
    }
    .contact-info__card h3 {
      font-size: 16px;
      color: #0D0D0D;
    }
    .contact-info__card p,
    .contact-info__card a {
      font-size: 14px;
      color: rgba(0, 0, 0, 0.60);
    }
    .contact-info__card-link {
      font-size: 14px;
      color: #1D1D1B;
    }
    .contact-info__form-section {
      padding-top: 40px;
    }
    .form-title {
      font-size: 18px;
      color: #0D0D0D;
    }
    .form-text,
    .form-response {
      font-size: 14px;
      color: #1D1D1B;
    }
    .contact-info__form {
      width: 342px;
      margin: 0 auto;
    }
    .form-row {
      flex-direction: column;
      gap: 20px;
      width: 100%;
      margin-bottom: 20px;
    }
    .form-row input,
    textarea {
      font-size: 16px;
      height: 54px;
      border-radius: 10px;
      padding: 12px 24px;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }
    textarea {
      min-height: 54px;
      height: 54px;
      resize: vertical;
    }
    .form-row input::placeholder,
    textarea::placeholder {
      color: #C6C6C6;
      opacity: 1;
    }
    .contact-info__submit span {
      font-size: 18px;
      color: #fff;
      font-family: 'Questrial', sans-serif;
    }
    .contact-info__addresses {
      width: 342px;
      margin: 0 auto;
    }
    .contact-info__addresses h3 {
      font-size: 20px;
      color: #0D0D0D;
      margin-bottom: 20px;
    }
    .address-grid {
      gap: 20px;
      flex-direction: column;
      width: 342px;
      box-sizing: border-box;
      /* Remove separators for mobile */
    }
    .separator {
      display: none;
    }
    .address-item strong {
      font-size: 16px;
      color: #000000;
    }
    .address-item span {
      font-size: 16px;
      color: rgba(0, 0, 0, 0.60);
    }
    .address-item {
      font-size: 16px;
      padding: 20px 0;
      width: 100%;
      box-sizing: border-box;
    }
  }
  {% endstyle %}
</div>

